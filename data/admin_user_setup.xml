<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Assign Admin User to KCCA PMIS Groups -->
        <record id="base.user_admin" model="res.users">
            <field name="groups_id" eval="[(4, ref('group_kcca_pmis_admin'))]"/>
        </record>
        
        <!-- Create a demo KCCA user with all permissions -->
        <record id="user_kcca_demo" model="res.users">
            <field name="name">KCCA Demo User</field>
            <field name="login">kcca_demo</field>
            <field name="password">kcca_demo</field>
            <field name="email">demo@kcca.go.ug</field>
            <field name="groups_id" eval="[(6, 0, [
                ref('base.group_user'),
                ref('group_kcca_pmis_admin'),
                ref('group_kcca_pmis_manager'),
                ref('group_kcca_pmis_officer'),
                ref('group_kcca_pmis_user')
            ])]"/>
        </record>
        
    </data>
</odoo>

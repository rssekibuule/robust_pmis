<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Server action to ensure each division implements all programmes -->
        <record id="ir_actions_server_ensure_all_programmes" model="ir.actions.server">
            <field name="name">Ensure All Divisions Implement All Programmes</field>
            <field name="model_id" ref="model_kcca_division"/>
            <field name="state">code</field>
            <field name="code">
                action = env['kcca.division'].search([]).ensure_all_programmes_implemented()
            </field>
        </record>

        <!-- Cron job (runs once daily, safe if re-run) -->
        <record id="ir_cron_ensure_all_programmes" model="ir.cron">
            <field name="name">PMIS: Ensure All Divisions Implement All Programmes</field>
            <field name="model_id" ref="model_kcca_division"/>
            <field name="state">code</field>
            <field name="code">env['kcca.division'].search([]).ensure_all_programmes_implemented()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active">True</field>
        </record>
    </data>
</odoo>

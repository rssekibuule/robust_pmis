<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        
        <!-- Infrastructure Development Demo KRAs and KPIs -->
        
        <!-- KRA 1: Road Infrastructure Development -->
        <record id="kra_road_infrastructure" model="key.result.area">
            <field name="name">Road Infrastructure Development</field>
            <field name="strategic_objective_id" ref="strategic_objective_infrastructure_development"/>
            <field name="description">Develop, maintain and upgrade road networks across the city</field>
            <field name="sequence">10</field>
            <field name="active">True</field>
        </record>

        <!-- KRA 2: Public Transport Systems -->
        <record id="kra_public_transport" model="key.result.area">
            <field name="name">Public Transport Systems</field>
            <field name="strategic_objective_id" ref="strategic_objective_infrastructure_development"/>
            <field name="description">Enhance public transport infrastructure and services</field>
            <field name="sequence">20</field>
            <field name="active">True</field>
        </record>

        <!-- KRA 3: Water and Sanitation Infrastructure -->
        <record id="kra_water_sanitation" model="key.result.area">
            <field name="name">Water and Sanitation Infrastructure</field>
            <field name="strategic_objective_id" ref="strategic_objective_infrastructure_development"/>
            <field name="description">Improve water supply and sanitation infrastructure</field>
            <field name="sequence">30</field>
            <field name="active">True</field>
        </record>

        <!-- KRA 4: Digital Infrastructure -->
        <record id="kra_digital_infrastructure" model="key.result.area">
            <field name="name">Digital Infrastructure</field>
            <field name="strategic_objective_id" ref="strategic_objective_infrastructure_development"/>
            <field name="description">Develop ICT and digital infrastructure for smart city initiatives</field>
            <field name="sequence">40</field>
            <field name="active">True</field>
        </record>

        <!-- KRA 5: Green Infrastructure -->
        <record id="kra_green_infrastructure" model="key.result.area">
            <field name="name">Green Infrastructure</field>
            <field name="strategic_objective_id" ref="strategic_objective_infrastructure_development"/>
            <field name="description">Develop environmentally sustainable infrastructure and green spaces</field>
            <field name="sequence">50</field>
            <field name="active">True</field>
        </record>

        <!-- KPIs for Road Infrastructure Development -->
        <record id="kpi_roads_constructed" model="key.performance.indicator">
            <field name="name">Kilometers of New Roads Constructed</field>
            <field name="kra_id" ref="kra_road_infrastructure"/>
            <field name="description">Total kilometers of new roads constructed annually</field>
            <field name="frequency">annual</field>
            <field name="target_value">50</field>
            <field name="current_value">32</field>
            <field name="weight">1.5</field>
            <field name="active">True</field>
        </record>

        <record id="kpi_roads_rehabilitated" model="key.performance.indicator">
            <field name="name">Kilometers of Roads Rehabilitated</field>
            <field name="kra_id" ref="kra_road_infrastructure"/>
            <field name="description">Total kilometers of existing roads rehabilitated annually</field>
            <field name="frequency">annual</field>
            <field name="target_value">100</field>
            <field name="current_value">78</field>
            <field name="weight">1.2</field>
            <field name="active">True</field>
        </record>

        <record id="kpi_road_condition_index" model="key.performance.indicator">
            <field name="name">Road Condition Index</field>
            <field name="kra_id" ref="kra_road_infrastructure"/>
            <field name="description">Average condition rating of city roads (1-10 scale)</field>
            <field name="frequency">quarterly</field>
            <field name="target_value">7.5</field>
            <field name="current_value">6.8</field>
            <field name="weight">1.0</field>
            <field name="active">True</field>
        </record>

        <!-- KPIs for Public Transport Systems -->
        <record id="kpi_bus_stops_constructed" model="key.performance.indicator">
            <field name="name">Bus Stops Constructed</field>
            <field name="kra_id" ref="kra_public_transport"/>
            <field name="description">Number of new bus stops constructed</field>
            <field name="frequency">annual</field>
            <field name="target_value">25</field>
            <field name="current_value">18</field>
            <field name="weight">1.0</field>
            <field name="active">True</field>
        </record>

        <record id="kpi_public_transport_coverage" model="key.performance.indicator">
            <field name="name">Public Transport Coverage</field>
            <field name="kra_id" ref="kra_public_transport"/>
            <field name="description">Percentage of city areas covered by public transport within 500m</field>
            <field name="frequency">quarterly</field>
            <field name="target_value">85</field>
            <field name="current_value">72</field>
            <field name="weight">1.3</field>
            <field name="active">True</field>
        </record>

        <record id="kpi_transport_ridership" model="key.performance.indicator">
            <field name="name">Public Transport Daily Ridership</field>
            <field name="kra_id" ref="kra_public_transport"/>
            <field name="description">Average daily passengers using public transport (thousands)</field>
            <field name="frequency">monthly</field>
            <field name="target_value">150</field>
            <field name="current_value">128</field>
            <field name="weight">1.1</field>
            <field name="active">True</field>
        </record>

        <!-- KPIs for Water and Sanitation Infrastructure -->
        <record id="kpi_water_access" model="key.performance.indicator">
            <field name="name">Water Access Coverage</field>
            <field name="kra_id" ref="kra_water_sanitation"/>
            <field name="description">Percentage of population with access to clean water</field>
            <field name="frequency">quarterly</field>
            <field name="target_value">95</field>
            <field name="current_value">87</field>
            <field name="weight">1.4</field>
            <field name="active">True</field>
        </record>

        <record id="kpi_sewerage_coverage" model="key.performance.indicator">
            <field name="name">Sewerage Network Coverage</field>
            <field name="kra_id" ref="kra_water_sanitation"/>
            <field name="description">Percentage of areas connected to sewerage network</field>
            <field name="frequency">quarterly</field>
            <field name="target_value">80</field>
            <field name="current_value">65</field>
            <field name="weight">1.2</field>
            <field name="active">True</field>
        </record>

        <record id="kpi_water_quality_compliance" model="key.performance.indicator">
            <field name="name">Water Quality Compliance Rate</field>
            <field name="kra_id" ref="kra_water_sanitation"/>
            <field name="description">Percentage of water samples meeting quality standards</field>
            <field name="frequency">monthly</field>
            <field name="target_value">98</field>
            <field name="current_value">94</field>
            <field name="weight">1.3</field>
            <field name="active">True</field>
        </record>

        <!-- KPIs for Digital Infrastructure -->
        <record id="kpi_fiber_coverage" model="key.performance.indicator">
            <field name="name">Fiber Optic Network Coverage</field>
            <field name="kra_id" ref="kra_digital_infrastructure"/>
            <field name="description">Percentage of city areas covered by fiber optic network</field>
            <field name="frequency">quarterly</field>
            <field name="target_value">75</field>
            <field name="current_value">58</field>
            <field name="weight">1.2</field>
            <field name="active">True</field>
        </record>

        <record id="kpi_wifi_hotspots" model="key.performance.indicator">
            <field name="name">Public WiFi Hotspots</field>
            <field name="kra_id" ref="kra_digital_infrastructure"/>
            <field name="description">Number of active public WiFi hotspots in the city</field>
            <field name="frequency">quarterly</field>
            <field name="target_value">200</field>
            <field name="current_value">145</field>
            <field name="weight">1.0</field>
            <field name="active">True</field>
        </record>

        <record id="kpi_smart_traffic_lights" model="key.performance.indicator">
            <field name="name">Smart Traffic Light Systems</field>
            <field name="kra_id" ref="kra_digital_infrastructure"/>
            <field name="description">Number of intersections with smart traffic management systems</field>
            <field name="frequency">annual</field>
            <field name="target_value">100</field>
            <field name="current_value">42</field>
            <field name="weight">1.1</field>
            <field name="active">True</field>
        </record>

        <record id="kpi_digital_service_uptake" model="key.performance.indicator">
            <field name="name">Digital Service Uptake Rate</field>
            <field name="kra_id" ref="kra_digital_infrastructure"/>
            <field name="description">Percentage of city services available digitally</field>
            <field name="frequency">quarterly</field>
            <field name="target_value">70</field>
            <field name="current_value">52</field>
            <field name="weight">1.2</field>
            <field name="active">True</field>
        </record>

        <!-- KPIs for Green Infrastructure -->
        <record id="kpi_green_spaces" model="key.performance.indicator">
            <field name="name">Green Space Per Capita</field>
            <field name="kra_id" ref="kra_green_infrastructure"/>
            <field name="description">Square meters of green space per person</field>
            <field name="frequency">annual</field>
            <field name="target_value">15</field>
            <field name="current_value">12</field>
            <field name="weight">1.2</field>
            <field name="active">True</field>
        </record>

        <record id="kpi_tree_coverage" model="key.performance.indicator">
            <field name="name">Urban Tree Coverage</field>
            <field name="kra_id" ref="kra_green_infrastructure"/>
            <field name="description">Percentage of city area covered by tree canopy</field>
            <field name="frequency">annual</field>
            <field name="target_value">30</field>
            <field name="current_value">25</field>
            <field name="weight">1.1</field>
            <field name="active">True</field>
        </record>

        <record id="kpi_solar_installations" model="key.performance.indicator">
            <field name="name">Solar Energy Installations</field>
            <field name="kra_id" ref="kra_green_infrastructure"/>
            <field name="description">Number of public buildings with solar energy systems</field>
            <field name="frequency">annual</field>
            <field name="target_value">50</field>
            <field name="current_value">23</field>
            <field name="weight">1.0</field>
            <field name="active">True</field>
        </record>

        <record id="kpi_waste_recycling_rate" model="key.performance.indicator">
            <field name="name">Waste Recycling Rate</field>
            <field name="kra_id" ref="kra_green_infrastructure"/>
            <field name="description">Percentage of municipal waste that is recycled</field>
            <field name="frequency">monthly</field>
            <field name="target_value">40</field>
            <field name="current_value">28</field>
            <field name="weight">1.3</field>
            <field name="active">True</field>
        </record>

        <record id="kpi_air_quality_index" model="key.performance.indicator">
            <field name="name">Air Quality Index</field>
            <field name="kra_id" ref="kra_green_infrastructure"/>
            <field name="description">Average daily air quality index (lower is better)</field>
            <field name="frequency">daily</field>
            <field name="target_value">50</field>
            <field name="current_value">68</field>
            <field name="weight">1.4</field>
            <field name="active">True</field>
        </record>

    </data>
</odoo>

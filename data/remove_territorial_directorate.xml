            <field name="directorate_id" eval="False"/>
        </record>
        <record id="division_kawempe" model="kcca.division">
            <field name="directorate_id" eval="False"/>
        </record>
        <record id="division_lubaga" model="kcca.division">
            <field name="directorate_id" eval="False"/>
        </record>
        <record id="division_makindye" model="kcca.division">
            <field name="directorate_id" eval="False"/>
        </record>
        <record id="division_nakawa" model="kcca.division">
            <field name="directorate_id" eval="False"/>
        </record>
    </data>
</odoo>


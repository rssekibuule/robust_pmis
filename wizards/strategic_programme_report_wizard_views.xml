<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Strategic Programme Report Wizard Form View -->
        <record id="view_strategic_programme_report_wizard_form" model="ir.ui.view">
            <field name="name">strategic.programme.report.wizard.form</field>
            <field name="model">strategic.programme.report.wizard</field>
            <field name="arch" type="xml">
                <form string="Strategic-Programme Linkage Report Generator">
                    <sheet>
                        <div class="oe_title">
                            <h1>ðŸ“Š Strategic-Programme Linkage Report</h1>
                            <p>Generate comprehensive reports analyzing the performance linkages between strategic KPIs and programme indicators</p>
                        </div>
                        
                        <group>
                            <group string="Report Configuration">
                                <field name="report_type"/>
                                <field name="output_format"/>
                            </group>
                            <group string="Report Options">
                                <field name="include_charts"/>
                                <field name="include_recommendations"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Filters">
                                <group>
                                    <group string="Organizational Filters">
                                        <field name="strategic_kpi_ids" widget="many2many_tags"/>
                                        <field name="programme_ids" widget="many2many_tags"/>
                                        <field name="directorate_ids" widget="many2many_tags"/>
                                    </group>
                                    <group string="Performance Filters">
                                        <field name="min_achievement_percentage"/>
                                        <field name="max_achievement_percentage"/>
                                    </group>
                                </group>
                                
                                <div class="alert alert-info" role="alert">
                                    <strong>Filter Guidelines:</strong>
                                    <ul>
                                        <li>Leave organizational filters empty to include all items</li>
                                        <li>Use performance filters to focus on specific achievement ranges</li>
                                        <li>Combine filters to create targeted analysis reports</li>
                                    </ul>
                                </div>
                            </page>
                            
                            <page string="Report Preview" invisible="report_file == False">
                                <group>
                                    <field name="report_filename" readonly="1"/>
                                    <field name="report_file" filename="report_filename" readonly="1"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    
                    <footer>
                        <button name="action_generate_report" string="Generate Report" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        
        <!-- Strategic Programme Report Wizard Action -->
        <record id="action_strategic_programme_report_wizard" model="ir.actions.act_window">
            <field name="name">Generate Strategic-Programme Report</field>
            <field name="res_model">strategic.programme.report.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_strategic_programme_report_wizard_form"/>
        </record>
        
        <!-- Menu Item -->
        <menuitem id="menu_strategic_programme_report_wizard"
                  name="Generate Linkage Reports"
                  parent="menu_performance_tracking"
                  action="action_strategic_programme_report_wizard"
                  sequence="20"/>
        
    </data>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Financial Analysis Tree View -->
        <record id="view_financial_analysis_tree" model="ir.ui.view">
            <field name="name">financial.analysis.tree</field>
            <field name="model">financial.analysis</field>
            <field name="arch" type="xml">
                <list string="Financial Analysis" decoration-info="state=='draft'" decoration-success="state=='approved'" decoration-warning="state=='in_review'">
                    <field name="name"/>
                    <field name="analysis_type"/>
                    <field name="scope"/>
                    <field name="fiscal_year"/>
                    <field name="analysis_date"/>
                    <field name="total_budget_analyzed" widget="float" string="Budget (UGX Bns)"/>
                    <field name="efficiency_score" widget="progressbar"/>
                    <field name="risk_level"/>
                    <field name="state"/>
                    <field name="financial_strategy_id"/>
                </list>
            </field>
        </record>

        <!-- Financial Analysis Form View -->
        <record id="view_financial_analysis_form" model="ir.ui.view">
            <field name="name">financial.analysis.form</field>
            <field name="model">financial.analysis</field>
            <field name="arch" type="xml">
                <form string="Financial Analysis">
                    <header>
                        <button name="generate_budget_variance_analysis" string="Generate Variance Analysis" type="object" class="btn-primary" invisible="analysis_type != 'budget_variance'"/>
                        <button name="generate_funding_source_analysis" string="Generate Funding Analysis" type="object" class="btn-primary" invisible="analysis_type != 'funding_analysis'"/>
                        <button name="generate_programme_efficiency_analysis" string="Generate Efficiency Analysis" type="object" class="btn-primary" invisible="analysis_type != 'programme_efficiency'"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,in_review,approved,published"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Analysis Name..."/>
                            </h1>
                        </div>
                        
                        <group>
                            <group>
                                <field name="financial_strategy_id" options="{'no_create': True}"/>
                                <field name="analysis_type"/>
                                <field name="scope"/>
                                <field name="fiscal_year"/>
                                <field name="analysis_date"/>
                            </group>
                            <group>
                                <field name="total_budget_analyzed" widget="float"/>
                                <field name="variance_amount" widget="float" invisible="analysis_type != 'budget_variance'"/>
                                <field name="variance_percentage" widget="float" invisible="analysis_type != 'budget_variance'"/>
                                <field name="efficiency_score" widget="progressbar"/>
                                <field name="risk_level"/>
                                <field name="confidence_level" widget="progressbar"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Analysis Results" name="results">
                                <group>
                                    <field name="executive_summary" widget="html"/>
                                </group>
                                <separator string="Key Findings"/>
                                <field name="key_findings" widget="html"/>
                                <separator string="Recommendations"/>
                                <field name="recommendations" widget="html"/>
                            </page>
                            
                            <page string="Data &amp; Methodology" name="data">
                                <group>
                                    <group>
                                        <field name="methodology"/>
                                        <field name="data_sources"/>
                                    </group>
                                    <group>
                                        <field name="programme_count"/>
                                        <field name="directorate_count"/>
                                        <field name="indicator_count"/>
                                    </group>
                                </group>
                                <separator string="Analysis Data (JSON)"/>
                                <field name="analysis_data" widget="text"/>
                            </page>
                            
                            <page string="Related Records" name="relationships">
                                <group>
                                    <field name="programme_budget_ids" widget="many2many_tags"/>
                                    <field name="directorate_ids" widget="many2many_tags"/>
                                    <field name="programme_ids" widget="many2many_tags"/>
                                </group>
                                <separator string="Performance Integration"/>
                                <group>
                                    <field name="performance_indicator_ids" widget="many2many_tags"/>
                                    <field name="kpi_ids" widget="many2many_tags"/>
                                </group>
                            </page>
                            
                            <page string="Attachments" name="attachments">
                                <group>
                                    <field name="chart_attachments" widget="many2many_binary"/>
                                    <field name="report_attachments" widget="many2many_binary"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <!-- Financial Analysis Search View -->
        <record id="view_financial_analysis_search" model="ir.ui.view">
            <field name="name">financial.analysis.search</field>
            <field name="model">financial.analysis</field>
            <field name="arch" type="xml">
                <search string="Financial Analysis">
                    <field name="name"/>
                    <field name="financial_strategy_id"/>
                    <field name="analysis_type"/>
                    <field name="scope"/>
                    <field name="fiscal_year"/>
                    
                    <filter string="Budget Variance" name="budget_variance" domain="[('analysis_type', '=', 'budget_variance')]"/>
                    <filter string="Funding Analysis" name="funding_analysis" domain="[('analysis_type', '=', 'funding_analysis')]"/>
                    <filter string="Programme Efficiency" name="programme_efficiency" domain="[('analysis_type', '=', 'programme_efficiency')]"/>
                    <filter string="Risk Assessment" name="risk_assessment" domain="[('analysis_type', '=', 'risk_assessment')]"/>
                    
                    <separator/>
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="In Review" name="in_review" domain="[('state', '=', 'in_review')]"/>
                    <filter string="Approved" name="approved" domain="[('state', '=', 'approved')]"/>
                    <filter string="Published" name="published" domain="[('state', '=', 'published')]"/>
                    
                    <separator/>
                    <filter string="High Risk" name="high_risk" domain="[('risk_level', 'in', ['high', 'critical'])]"/>
                    <filter string="This Month" name="this_month" domain="[('analysis_date', '>=', (context_today() - datetime.timedelta(days=30)).strftime('%Y-%m-%d'))]"/>
                    
                    <group expand="0" string="Group By">
                        <filter string="Analysis Type" name="group_analysis_type" context="{'group_by': 'analysis_type'}"/>
                        <filter string="Scope" name="group_scope" context="{'group_by': 'scope'}"/>
                        <filter string="Fiscal Year" name="group_fiscal_year" context="{'group_by': 'fiscal_year'}"/>
                        <filter string="Risk Level" name="group_risk_level" context="{'group_by': 'risk_level'}"/>
                        <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                        <filter string="Analysis Date" name="group_analysis_date" context="{'group_by': 'analysis_date:month'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Financial Analysis Kanban View -->
        <record id="view_financial_analysis_kanban" model="ir.ui.view">
            <field name="name">financial.analysis.kanban</field>
            <field name="model">financial.analysis</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state" class="o_kanban_small_column">
                    <field name="name"/>
                    <field name="analysis_type"/>
                    <field name="scope"/>
                    <field name="total_budget_analyzed"/>
                    <field name="efficiency_score"/>
                    <field name="risk_level"/>
                    <field name="state"/>
                    <field name="analysis_date"/>
                    
                    <templates>
                        <t t-name="card">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <br/>
                                        <small class="o_kanban_record_subtitle text-muted">
                                            <field name="analysis_type"/> - <field name="scope"/>
                                        </small>
                                    </div>
                                    <div class="o_kanban_record_top_right">
                                        <div class="o_kanban_record_badges">
                                            <span t-if="record.risk_level.raw_value == 'high'" class="badge text-bg-danger">High Risk</span>
                                            <span t-if="record.risk_level.raw_value == 'critical'" class="badge text-bg-dark">Critical</span>
                                            <span t-if="record.risk_level.raw_value == 'medium'" class="badge text-bg-warning">Medium Risk</span>
                                            <span t-if="record.risk_level.raw_value == 'low'" class="badge text-bg-success">Low Risk</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="row">
                                        <div class="col-6">
                                            <strong>Budget:</strong><br/>
                                            UGX <field name="total_budget_analyzed"/> Bns
                                        </div>
                                        <div class="col-6">
                                            <strong>Efficiency:</strong><br/>
                                            <field name="efficiency_score"/>%
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="analysis_date"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="state" widget="label_selection" options="{'classes': {'draft': 'secondary', 'in_review': 'warning', 'approved': 'success', 'published': 'info'}}"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Financial Analysis Action -->
        <record id="action_financial_analysis" model="ir.actions.act_window">
            <field name="name">Financial Analysis</field>
            <field name="res_model">financial.analysis</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first Financial Analysis!
                </p>
                <p>
                    Financial Analysis provides comprehensive insights into budget performance,
                    funding sources, programme efficiency, and financial risks.
                </p>
            </field>
        </record>

    </data>
</odoo>

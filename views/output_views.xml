<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Output List View -->
        <record id="view_output_list" model="ir.ui.view">
            <field name="name">output.list</field>
            <field name="model">output</field>
            <field name="arch" type="xml">
                <list string="Outputs" decoration-muted="not active">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="intervention_id"/>
                    <field name="outcome_id"/>
                    <field name="programme_id"/>
                    <field name="responsible_user_id"/>
                    <field name="piap_action_count" string="PIAP Actions"/>
                    <field name="indicator_count" string="Indicators"/>
                    <field name="progress" widget="progressbar"/>
                    <field name="active" invisible="1"/>
                </list>
            </field>
        </record>

        <!-- Output Form View -->
        <record id="view_output_form" model="ir.ui.view">
            <field name="name">output.form</field>
            <field name="model">output</field>
            <field name="arch" type="xml">
                <form string="Output" class="o_form_view_compact_chatter">
                    <header>
                        <field name="active" widget="boolean_toggle"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_piap_actions" type="object"
                                    class="oe_stat_button" icon="fa-list-ul">
                                <field name="piap_action_count" widget="statinfo" string="PIAP Actions"/>
                            </button>
                            <button name="action_view_indicators" type="object"
                                    class="oe_stat_button" icon="fa-tachometer">
                                <field name="indicator_count" widget="statinfo" string="Indicators"/>
                            </button>
                        </div>

                        <group>
                            <group>
                                <field name="name"/>
                                <field name="intervention_id"/>
                                <field name="outcome_id" readonly="1"/>
                                <field name="programme_id" readonly="1"/>
                                <field name="objective_id" readonly="1"/>
                            </group>
                            <group>
                                <field name="sequence"/>
                                <field name="responsible_user_id"/>
                                <field name="progress" widget="progressbar"/>
                            </group>
                        </group>

                        <group>
                            <group string="Timeline">
                                <field name="start_date"/>
                                <field name="end_date"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Description">
                                <field name="description" widget="html"/>
                            </page>
                            <page string="PIAP Actions">
                                <field name="piap_action_ids">
                                    <list editable="bottom">
                                        <field name="sequence" widget="handle"/>
                                        <field name="name"/>
                                        <field name="responsible_user_id"/>
                                        <field name="status"/>
                                        <field name="progress" widget="progressbar"/>
                                        <field name="total_budget" sum="Total Budget"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Performance Indicators">
                                <field name="indicator_ids">
                                    <list>
                                        <field name="name"/>
                                        <field name="current_value"/>
                                        <field name="target_value"/>
                                        <field name="measurement_unit"/>
                                        <field name="achievement_percentage" widget="progressbar"/>
                                        <field name="status"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <!-- Output Search View -->
        <record id="view_output_search" model="ir.ui.view">
            <field name="name">output.search</field>
            <field name="model">output</field>
            <field name="arch" type="xml">
                <search string="Search Outputs">
                    <field name="name" string="Output"/>
                    <field name="intervention_id"/>
                    <field name="outcome_id"/>
                    <field name="programme_id"/>
                    <field name="responsible_user_id"/>
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                    <separator/>
                    <filter string="My Outputs" name="my_outputs" 
                            domain="[('responsible_user_id', '=', uid)]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Intervention" name="group_intervention" 
                                context="{'group_by': 'intervention_id'}"/>
                        <filter string="Intermediate Outcome" name="group_outcome" 
                                context="{'group_by': 'outcome_id'}"/>
                        <filter string="Programme" name="group_programme" 
                                context="{'group_by': 'programme_id'}"/>
                        <filter string="Responsible Person" name="group_responsible" 
                                context="{'group_by': 'responsible_user_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Output Action -->
        <record id="action_output" model="ir.actions.act_window">
            <field name="name">Outputs</field>
            <field name="res_model">output</field>
            <field name="view_mode">list,form</field>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first output!
                </p>
                <p>
                    Outputs are the specific deliverables produced by interventions.
                    Each output is achieved through multiple PIAP actions and measured by performance indicators.
                </p>
            </field>
        </record>

    </data>
</odoo>

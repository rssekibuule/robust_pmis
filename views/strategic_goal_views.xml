<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Strategic Goal List View -->
        <record id="view_strategic_goal_list" model="ir.ui.view">
            <field name="name">strategic.goal.list</field>
            <field name="model">strategic.goal</field>
            <field name="arch" type="xml">
                <list string="Strategic Goals" decoration-muted="not active">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="objective_count" string="Objectives"/>
                    <field name="kra_count" string="KRAs"/>
                    <field name="kpi_count" string="KPIs"/>
                    <field name="progress" widget="progressbar"/>
                    <field name="active" invisible="1"/>
                </list>
            </field>
        </record>
        
        <!-- Strategic Goal Form View -->
        <record id="view_strategic_goal_form" model="ir.ui.view">
            <field name="name">strategic.goal.form</field>
            <field name="model">strategic.goal</field>
            <field name="arch" type="xml">
                <form string="Strategic Goal" class="o_form_view_compact_chatter">
                    <header>
                        <field name="active" widget="boolean_toggle"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_objectives" type="object"
                                    class="oe_stat_button" icon="fa-bullseye">
                                <field name="objective_count" widget="statinfo" string="Objectives"/>
                            </button>
                            <button name="action_view_kras" type="object"
                                    class="oe_stat_button" icon="fa-key">
                                <field name="kra_count" widget="statinfo" string="KRAs"/>
                            </button>
                            <button name="action_view_kpis" type="object"
                                    class="oe_stat_button" icon="fa-tachometer">
                                <field name="kpi_count" widget="statinfo" string="KPIs"/>
                            </button>
                        </div>

                        <!-- Smart Cards Section -->
                        <div class="kcca_smart_cards_container">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="kcca_smart_card kcca_programmes_card">
                                        <div class="kcca_card_header">
                                            <i class="fa fa-tasks kcca_card_icon" title="Programmes"></i>
                                            <h4>Programmes</h4>
                                        </div>
                                        <div class="kcca_card_content">
                                            <div class="kcca_card_number">
                                                <field name="programme_count"/>
                                            </div>
                                            <div class="kcca_card_description">
                                                Contributing programmes
                                            </div>
                                            <button name="action_view_programmes" type="object"
                                                    class="btn btn-primary btn-sm kcca_card_button">
                                                View All
                                            </button>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="kcca_smart_card kcca_directorates_card">
                                        <div class="kcca_card_header">
                                            <i class="fa fa-building kcca_card_icon" title="Directorates"></i>
                                            <h4>Directorates</h4>
                                        </div>
                                        <div class="kcca_card_content">
                                            <div class="kcca_card_number">
                                                <field name="directorate_count"/>
                                            </div>
                                            <div class="kcca_card_description">
                                                Implementing directorates
                                            </div>
                                            <button name="action_view_directorates" type="object"
                                                    class="btn btn-success btn-sm kcca_card_button">
                                                View All
                                            </button>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="kcca_smart_card kcca_divisions_card">
                                        <div class="kcca_card_header">
                                            <i class="fa fa-map-marker kcca_card_icon" title="Divisions"></i>
                                            <h4>Divisions</h4>
                                        </div>
                                        <div class="kcca_card_content">
                                            <div class="kcca_card_number">
                                                <field name="division_count"/>
                                            </div>
                                            <div class="kcca_card_description">
                                                Territorial divisions
                                            </div>
                                            <button name="action_view_divisions" type="object"
                                                    class="btn btn-info btn-sm kcca_card_button">
                                                View All
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Strategic Goal Name"/>
                            </h1>
                        </div>
                        
                        <group>
                            <group>
                                <field name="sequence"/>
                                <field name="color" widget="color"/>
                            </group>
                            <group>
                                <field name="progress" widget="progressbar"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Description">
                                <field name="description" widget="html"/>
                            </page>
                            <page string="Strategic Objectives">
                                <field name="strategic_objective_ids">
                                    <list editable="bottom">
                                        <field name="sequence" widget="handle"/>
                                        <field name="name"/>
                                        <field name="kra_count" string="KRAs"/>
                                        <field name="progress" widget="progressbar"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Direct KRAs">
                                <field name="kra_ids">
                                    <list editable="bottom">
                                        <field name="sequence" widget="handle"/>
                                        <field name="name"/>
                                        <field name="kpi_count" string="KPIs"/>
                                        <field name="progress" widget="progressbar"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <!-- Strategic Goal List View -->
        <record id="view_strategic_goal_tree" model="ir.ui.view">
            <field name="name">strategic.goal.list</field>
            <field name="model">strategic.goal</field>
            <field name="arch" type="xml">
                <list string="Strategic Goals">
                    <field name="name"/>
                    <field name="progress" widget="progressbar"/>
                    <field name="objective_count"/>
                    <field name="kra_count"/>
                    <field name="kpi_count"/>
                    <field name="color" invisible="1"/>
                </list>
            </field>
        </record>

        <!-- Strategic Goal Kanban View -->
        <record id="view_strategic_goal_kanban" model="ir.ui.view">
            <field name="name">strategic.goal.kanban</field>
            <field name="model">strategic.goal</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <field name="name"/>
                    <field name="progress"/>
                    <field name="objective_count"/>
                    <field name="kra_count"/>
                    <field name="kpi_count"/>
                    <field name="color"/>
                    <templates>
                        <t t-name="card">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click" t-attf-style="border-left: 4px solid #{record.color.raw_value or '#e9ecef'}">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="row">
                                        <div class="col-6">
                                            <span>Objectives: <t t-out="record.objective_count.value"/></span><br/>
                                            <span>KRAs: <t t-out="record.kra_count.value"/></span><br/>
                                            <span>KPIs: <t t-out="record.kpi_count.value"/></span>
                                        </div>
                                        <div class="col-6">
                                            <div class="text-right">
                                                <field name="progress" widget="progressbar"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        
        <!-- Strategic Goal Action -->
        <record id="action_strategic_goal" model="ir.actions.act_window">
            <field name="name">Strategic Goals</field>
            <field name="res_model">strategic.goal</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first Strategic Goal
                </p>
                <p>
                    Strategic Goals define the high-level objectives that KCCA aims to achieve.
                    They provide direction for all organizational activities and serve as the foundation
                    for Key Result Areas (KRAs) and Key Performance Indicators (KPIs).
                </p>
            </field>
        </record>

        <!-- Strategic Objective Action -->
        <record id="action_strategic_objective" model="ir.actions.act_window">
            <field name="name">Strategic Objectives</field>
            <field name="res_model">strategic.objective</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- Key Result Area Action -->
        <record id="action_key_result_area" model="ir.actions.act_window">
            <field name="name">Key Result Areas</field>
            <field name="res_model">key.result.area</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- Key Performance Indicator Action -->
        <record id="action_key_performance_indicator" model="ir.actions.act_window">
            <field name="name">Key Performance Indicators</field>
            <field name="res_model">key.performance.indicator</field>
            <field name="view_mode">list,form</field>
        </record>
        
    </data>
</odoo>

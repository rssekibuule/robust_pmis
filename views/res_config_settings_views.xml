<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="view_res_config_settings_pmis" model="ir.ui.view">
      <field name="name">res.config.settings.view.form.pmis</field>
      <field name="model">res.config.settings</field>
      <field name="inherit_id" ref="base.res_config_settings_view_form"/>
      <field name="arch" type="xml">
        <xpath expr="//form" position="inside">
          <div class="app_settings_block" data-string="PMIS" string="PMIS" data-key="pmis_settings">
            <h2>Performance MIS</h2>
            <div class="row mt16 o_settings_container">
              <div class="col-12 col-lg-6 o_setting_box">
                <div class="o_setting_left_pane">
                  <field name="pmis_allowed_implementing_programme_codes" placeholder="AGRO,PSD,ITIS,SUH,DT,HCD,LOR,RRP,WME,PHE,DRC,UPD,AOJ,GS,PST,SED"/>
                </div>
                <div class="o_setting_right_pane">
                  <label for="pmis_allowed_implementing_programme_codes" string="Allowed Implementing Programme Codes"/>
                  <div class="text-muted">Comma-separated list of Programme codes permitted under Implementing relations.</div>
                </div>
              </div>
            </div>
          </div>
        </xpath>
      </field>
    </record>
  </data>
</odoo>

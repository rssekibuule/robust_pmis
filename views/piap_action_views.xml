<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- PIAP Action List View -->
        <record id="view_piap_action_list" model="ir.ui.view">
            <field name="name">piap.action.list</field>
            <field name="model">piap.action</field>
            <field name="arch" type="xml">
                <list string="PIAP Actions" decoration-muted="not active"
                      decoration-success="status == 'completed'"
                      decoration-info="status == 'in_progress'"
                      decoration-warning="status == 'on_hold'"
                      decoration-danger="status == 'cancelled'"
                      editable="bottom">
                    <field name="sequence" widget="handle"/>
                    <field name="name" readonly="1"/>
                    <field name="output_id" readonly="1"/>
                    <field name="intervention_id" readonly="1"/>
                    <field name="programme_id" readonly="1"/>
                    <field name="responsible_user_id" readonly="1"/>
                    <field name="status"/>
                    <field name="progress" widget="progressbar"/>
                    <field name="total_budget" sum="Total Budget" readonly="1"/>
                    <field name="start_date" readonly="1"/>
                    <field name="end_date" readonly="1"/>
                    <field name="active" invisible="1"/>
                </list>
            </field>
        </record>

        <!-- PIAP Action Form View -->
        <record id="view_piap_action_form" model="ir.ui.view">
            <field name="name">piap.action.form</field>
            <field name="model">piap.action</field>
            <field name="arch" type="xml">
                <form string="PIAP Action" class="o_form_view_compact_chatter">
                    <header>
                        <field name="status" widget="statusbar" statusbar_visible="not_started,in_progress,completed"/>
                        <field name="active" widget="boolean_toggle"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="output_id"/>
                                <field name="intervention_id" readonly="1"/>
                                <field name="outcome_id" readonly="1"/>
                                <field name="programme_id" readonly="1"/>
                                <field name="objective_id" readonly="1"/>
                            </group>
                            <group>
                                <field name="sequence"/>
                                <field name="responsible_user_id"/>
                                <field name="progress" widget="progressbar"/>
                                <field name="total_budget"/>
                            </group>
                        </group>

                        <group>
                            <group string="Planned Timeline">
                                <field name="start_date"/>
                                <field name="end_date"/>
                            </group>
                            <group string="Actual Timeline">
                                <field name="actual_start_date"/>
                                <field name="actual_end_date"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Description">
                                <field name="description" widget="html"/>
                            </page>
                            <page string="Budget Allocation">
                                <group>
                                    <group string="Multi-Year Budget (UGX Billion)">
                                        <field name="budget_fy2022_23"/>
                                        <field name="budget_fy2023_24"/>
                                        <field name="budget_fy2024_25"/>
                                        <field name="budget_fy2025_26"/>
                                        <field name="budget_fy2026_27"/>
                                    </group>
                                    <group string="Budget Summary">
                                        <field name="total_budget" readonly="1"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Performance Targets" invisible="target_value == 0">
                                <group>
                                    <group string="Target Values">
                                        <field name="target_value"/>
                                        <field name="current_value"/>
                                        <field name="baseline_value"/>
                                        <field name="measurement_unit"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <!-- PIAP Action Search View -->
        <record id="view_piap_action_search" model="ir.ui.view">
            <field name="name">piap.action.search</field>
            <field name="model">piap.action</field>
            <field name="arch" type="xml">
                <search string="Search PIAP Actions">
                    <field name="name" string="PIAP Action"/>
                    <field name="output_id"/>
                    <field name="intervention_id"/>
                    <field name="programme_id"/>
                    <field name="responsible_user_id"/>
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                    <separator/>
                    <filter string="Not Started" name="not_started" domain="[('status', '=', 'not_started')]"/>
                    <filter string="In Progress" name="in_progress" domain="[('status', '=', 'in_progress')]"/>
                    <filter string="Completed" name="completed" domain="[('status', '=', 'completed')]"/>
                    <filter string="On Hold" name="on_hold" domain="[('status', '=', 'on_hold')]"/>
                    <separator/>
                    <filter string="My PIAP Actions" name="my_actions" 
                            domain="[('responsible_user_id', '=', uid)]"/>
                    <separator/>
                    <filter string="Due This Month" name="due_this_month" 
                            domain="[('end_date', '&lt;=', (context_today() + relativedelta(months=1)).strftime('%Y-%m-%d')), ('end_date', '&gt;=', context_today().strftime('%Y-%m-%d'))]"/>
                    <filter string="Overdue" name="overdue" 
                            domain="[('end_date', '&lt;', context_today().strftime('%Y-%m-%d')), ('status', '!=', 'completed')]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Status" name="group_status" 
                                context="{'group_by': 'status'}"/>
                        <filter string="Output" name="group_output" 
                                context="{'group_by': 'output_id'}"/>
                        <filter string="Intervention" name="group_intervention" 
                                context="{'group_by': 'intervention_id'}"/>
                        <filter string="Programme" name="group_programme" 
                                context="{'group_by': 'programme_id'}"/>
                        <filter string="Responsible Person" name="group_responsible" 
                                context="{'group_by': 'responsible_user_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- PIAP Action Action -->
        <record id="action_piap_action" model="ir.actions.act_window">
            <field name="name">PIAP Actions</field>
            <field name="res_model">piap.action</field>
            <field name="view_mode">list,form</field>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first PIAP action!
                </p>
                <p>
                    PIAP Actions are the specific activities that deliver outputs.
                    Each action has budget allocations, timelines, and performance targets.
                </p>
            </field>
        </record>

    </data>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Financial Integration Tree View -->
        <record id="view_financial_integration_tree" model="ir.ui.view">
            <field name="name">financial.integration.tree</field>
            <field name="model">financial.integration</field>
            <field name="arch" type="xml">
                <list string="Financial Integration" decoration-info="state=='draft'" decoration-success="state=='completed'" decoration-warning="state=='processing'">
                    <field name="name"/>
                    <field name="integration_type"/>
                    <field name="scope"/>
                    <field name="fiscal_year_focus"/>
                    <field name="integration_date"/>
                    <field name="total_budget_integrated" widget="float" string="Budget (UGX Bns)"/>
                    <field name="performance_score" widget="progressbar"/>
                    <field name="integration_completeness" widget="progressbar"/>
                    <field name="state"/>
                    <field name="validation_status"/>
                </list>
            </field>
        </record>

        <!-- Financial Integration Form View -->
        <record id="view_financial_integration_form" model="ir.ui.view">
            <field name="name">financial.integration.form</field>
            <field name="model">financial.integration</field>
            <field name="arch" type="xml">
                <form string="Financial Integration">
                    <header>
                        <button name="execute_budget_performance_integration" string="Execute Integration" type="object" class="btn-primary" invisible="state != 'draft'"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,processing,completed,validated"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Integration Name..."/>
                            </h1>
                        </div>
                        
                        <group>
                            <group>
                                <field name="financial_strategy_id" options="{'no_create': True}"/>
                                <field name="integration_type"/>
                                <field name="scope"/>
                                <field name="fiscal_year_focus"/>
                                <field name="integration_date"/>
                            </group>
                            <group>
                                <field name="total_budget_integrated" widget="float"/>
                                <field name="performance_score" widget="progressbar"/>
                                <field name="efficiency_ratio" widget="float"/>
                                <field name="integration_completeness" widget="progressbar"/>
                                <field name="data_quality_score" widget="progressbar"/>
                                <field name="validation_status"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Integration Summary" name="summary">
                                <group>
                                    <field name="executive_summary" widget="html"/>
                                </group>
                                <separator string="Key Insights"/>
                                <field name="key_insights" widget="html"/>
                                <separator string="Recommendations"/>
                                <field name="recommendations" widget="html"/>
                            </page>
                            
                            <page string="Integration Data" name="data">
                                <group>
                                    <group>
                                        <field name="programme_count"/>
                                        <field name="directorate_count"/>
                                        <field name="indicator_count"/>
                                        <field name="budget_count"/>
                                    </group>
                                    <group>
                                        <field name="mapping_rules"/>
                                    </group>
                                </group>
                                <separator string="Integration Data (JSON)"/>
                                <field name="integration_data" widget="text"/>
                            </page>
                            
                            <page string="Integrated Components" name="components">
                                <group>
                                    <field name="programme_ids" widget="many2many_tags"/>
                                    <field name="directorate_ids" widget="many2many_tags"/>
                                    <field name="programme_budget_ids" widget="many2many_tags"/>
                                </group>
                                <separator string="Performance Integration"/>
                                <group>
                                    <field name="performance_indicator_ids" widget="many2many_tags"/>
                                    <field name="kpi_ids" widget="many2many_tags"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <!-- Financial Integration Search View -->
        <record id="view_financial_integration_search" model="ir.ui.view">
            <field name="name">financial.integration.search</field>
            <field name="model">financial.integration</field>
            <field name="arch" type="xml">
                <search string="Financial Integration">
                    <field name="name"/>
                    <field name="financial_strategy_id"/>
                    <field name="integration_type"/>
                    <field name="scope"/>
                    <field name="fiscal_year_focus"/>
                    
                    <filter string="Budget-Performance" name="budget_performance" domain="[('integration_type', '=', 'budget_performance')]"/>
                    <filter string="Programme-Financial" name="programme_financial" domain="[('integration_type', '=', 'programme_financial')]"/>
                    <filter string="KPI-Financial" name="kpi_financial" domain="[('integration_type', '=', 'kpi_financial')]"/>
                    
                    <separator/>
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Processing" name="processing" domain="[('state', '=', 'processing')]"/>
                    <filter string="Completed" name="completed" domain="[('state', '=', 'completed')]"/>
                    <filter string="Validated" name="validated" domain="[('state', '=', 'validated')]"/>
                    
                    <separator/>
                    <filter string="High Completeness" name="high_completeness" domain="[('integration_completeness', '>=', 80)]"/>
                    <filter string="This Month" name="this_month" domain="[('integration_date', '>=', (context_today() - datetime.timedelta(days=30)).strftime('%Y-%m-%d'))]"/>
                    
                    <group expand="0" string="Group By">
                        <filter string="Integration Type" name="group_integration_type" context="{'group_by': 'integration_type'}"/>
                        <filter string="Scope" name="group_scope" context="{'group_by': 'scope'}"/>
                        <filter string="Fiscal Year" name="group_fiscal_year" context="{'group_by': 'fiscal_year_focus'}"/>
                        <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                        <filter string="Validation Status" name="group_validation" context="{'group_by': 'validation_status'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Financial Integration Action -->
        <record id="action_financial_integration" model="ir.actions.act_window">
            <field name="name">Financial Integration</field>
            <field name="res_model">financial.integration</field>
            <field name="view_mode">list,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first Financial Integration!
                </p>
                <p>
                    Financial Integration connects budget data with performance metrics,
                    providing comprehensive insights into cost-effectiveness and efficiency.
                </p>
            </field>
        </record>

    </data>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Programme Objective List View -->
        <record id="view_programme_objective_list" model="ir.ui.view">
            <field name="name">programme.objective.list</field>
            <field name="model">programme.objective</field>
            <field name="arch" type="xml">
                <list string="Programme Objectives" decoration-muted="not active">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="programme_id"/>
                    <field name="responsible_user_id"/>
                    <field name="outcome_count" string="Outcomes"/>
                    <field name="intervention_count" string="Interventions"/>
                    <field name="output_count" string="Outputs"/>
                    <field name="piap_action_count" string="PIAP Actions"/>
                    <field name="indicator_count" string="Indicators"/>
                    <field name="progress" widget="progressbar"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="active" invisible="1"/>
                </list>
            </field>
        </record>

        <!-- Programme Objective Form View -->
        <record id="view_programme_objective_form" model="ir.ui.view">
            <field name="name">programme.objective.form</field>
            <field name="model">programme.objective</field>
            <field name="arch" type="xml">
                <form string="Programme Objective" class="o_form_view_compact_chatter">
                    <header>
                        <field name="active" widget="boolean_toggle"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_outcomes" type="object"
                                    class="oe_stat_button" icon="fa-target">
                                <field name="outcome_count" widget="statinfo" string="Outcomes"/>
                            </button>
                            <button name="action_view_interventions" type="object"
                                    class="oe_stat_button" icon="fa-cogs">
                                <field name="intervention_count" widget="statinfo" string="Interventions"/>
                            </button>
                            <button name="action_view_outputs" type="object"
                                    class="oe_stat_button" icon="fa-cube">
                                <field name="output_count" widget="statinfo" string="Outputs"/>
                            </button>
                            <button name="action_view_piap_actions" type="object"
                                    class="oe_stat_button" icon="fa-tasks">
                                <field name="piap_action_count" widget="statinfo" string="PIAP Actions"/>
                            </button>
                            <button name="action_view_indicators" type="object"
                                    class="oe_stat_button" icon="fa-tachometer">
                                <field name="indicator_count" widget="statinfo" string="Indicators"/>
                            </button>
                        </div>

                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Programme Objective Name"/>
                            </h1>
                        </div>

                        <group>
                            <group>
                                <field name="programme_id"/>
                                <field name="responsible_user_id"/>
                                <field name="sequence"/>
                            </group>
                            <group>
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="progress" widget="progressbar"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Description">
                                <field name="description" widget="html"/>
                            </page>
                            <page string="Intermediate Outcomes">
                                <field name="outcome_ids">
                                    <list editable="bottom">
                                        <field name="sequence" widget="handle"/>
                                        <field name="name"/>
                                        <field name="responsible_user_id"/>
                                        <field name="intervention_count" string="Interventions"/>
                                        <field name="indicator_count" string="Indicators"/>
                                        <field name="progress" widget="progressbar"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <!-- Programme Objective Tree View for Programme Form -->
        <record id="view_programme_objective_tree_embedded" model="ir.ui.view">
            <field name="name">programme.objective.tree.embedded</field>
            <field name="model">programme.objective</field>
            <field name="type">list</field>
            <field name="arch" type="xml">
                <list create="true" delete="true" open_form_view="true">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="outcome_count" string="Outcomes"/>
                    <field name="progress" widget="progressbar"/>
                </list>
            </field>
        </record>

        <!-- Programme Objective Action -->
        <record id="action_programme_objective" model="ir.actions.act_window">
            <field name="name">Programme Objectives</field>
            <field name="res_model">programme.objective</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first Programme Objective!
                </p>
                <p>
                    Programme objectives define the specific goals and outcomes that a programme aims to achieve.
                    They provide direction and measurable targets for programme implementation.
                </p>
            </field>
        </record>

    </data>
</odoo>

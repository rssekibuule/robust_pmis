<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Actions (defined first to avoid reference issues) -->
        <record id="action_performance_workflow_step" model="ir.actions.act_window">
            <field name="name">Workflow Steps</field>
            <field name="res_model">performance.workflow.step</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- Performance Workflow List View -->
        <record id="view_performance_workflow_list" model="ir.ui.view">
            <field name="name">performance.workflow.list</field>
            <field name="model">performance.workflow</field>
            <field name="arch" type="xml">
                <list string="Performance Workflows" decoration-danger="is_overdue" decoration-success="state=='completed'">
                    <field name="name"/>
                    <field name="workflow_type"/>
                    <field name="scope"/>
                    <field name="review_period_start"/>
                    <field name="review_period_end"/>
                    <field name="due_date"/>
                    <field name="progress" widget="progressbar"/>
                    <field name="state" widget="badge" decoration-info="state=='draft'" decoration-warning="state=='in_review'" decoration-success="state=='completed'"/>
                    <field name="is_overdue" invisible="1"/>
                </list>
            </field>
        </record>

        <!-- Performance Workflow Form View -->
        <record id="view_performance_workflow_form" model="ir.ui.view">
            <field name="name">performance.workflow.form</field>
            <field name="model">performance.workflow</field>
            <field name="arch" type="xml">
                <form string="Performance Workflow" class="o_form_view_compact_chatter">
                    <header>
                        <button name="action_initiate" string="Initiate" type="object" class="btn-primary" invisible="state != 'draft'"/>
                        <button name="action_complete" string="Complete" type="object" class="btn-success" invisible="state != 'pending_approval'"/>
                        <button name="action_cancel" string="Cancel" type="object" class="btn-secondary" invisible="state in ('completed', 'cancelled')"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,initiated,in_review,pending_approval,completed"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="%(action_performance_workflow_step)d" type="action"
                                    class="oe_stat_button" icon="fa-tasks"
                                    context="{'default_workflow_id': id, 'search_default_workflow_id': id}">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="progress" widget="float"/>%
                                    </span>
                                    <span class="o_stat_text">Progress</span>
                                </div>
                            </button>
                        </div>

                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Workflow Name"/>
                            </h1>
                        </div>

                        <group>
                            <group>
                                <field name="workflow_type"/>
                                <field name="scope"/>
                                <field name="initiator_id"/>
                            </group>
                            <group>
                                <field name="review_period_start"/>
                                <field name="review_period_end"/>
                                <field name="due_date"/>
                                <field name="is_overdue" invisible="1"/>
                            </group>
                        </group>

                        <group string="Scope Details">
                            <group>
                                <field name="directorate_id" invisible="scope != 'directorate'"/>
                                <field name="programme_id" invisible="scope != 'programme'"/>
                            </group>
                            <group>
                                <field name="kpi_id" invisible="scope != 'kpi'"/>
                            </group>
                        </group>

                        <group string="Participants">
                            <field name="reviewer_ids" widget="many2many_tags"/>
                            <field name="approver_ids" widget="many2many_tags"/>
                        </group>

                        <notebook>
                            <page string="Workflow Steps">
                                <field name="step_ids">
                                    <list editable="bottom">
                                        <field name="sequence" widget="handle"/>
                                        <field name="name"/>
                                        <field name="step_type"/>
                                        <field name="assigned_user_id"/>
                                        <field name="estimated_duration"/>
                                        <field name="start_date"/>
                                        <field name="completion_date"/>
                                        <field name="state" widget="badge"/>
                                        <button name="action_start" string="Start" type="object" icon="fa-play" invisible="state != 'pending'"/>
                                        <button name="action_complete" string="Complete" type="object" icon="fa-check" invisible="state != 'in_progress'"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Review Results" invisible="state in ('draft', 'initiated')">
                                <group>
                                    <field name="overall_rating"/>
                                </group>
                                <group string="Summary">
                                    <field name="review_summary" widget="html" nolabel="1"/>
                                </group>
                                <group string="Key Findings">
                                    <field name="key_findings" widget="html" nolabel="1"/>
                                </group>
                                <group string="Action Items">
                                    <field name="action_items" widget="html" nolabel="1"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <!-- Performance Workflow Kanban View -->
        <record id="view_performance_workflow_kanban" model="ir.ui.view">
            <field name="name">performance.workflow.kanban</field>
            <field name="model">performance.workflow</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state" class="o_kanban_small_column">
                    <field name="name"/>
                    <field name="workflow_type"/>
                    <field name="due_date"/>
                    <field name="progress"/>
                    <field name="state"/>
                    <field name="is_overdue"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click #{record.is_overdue.raw_value ? 'oe_kanban_color_2' : ''}">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <div class="text-muted">
                                            <field name="workflow_type"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="text-muted">
                                        <i class="fa fa-calendar"/> Due: <field name="due_date"/>
                                    </div>
                                    <div class="mt8">
                                        <div class="progress">
                                            <div class="progress-bar" role="progressbar" t-attf-style="width: #{record.progress.raw_value}%" t-attf-aria-valuenow="#{record.progress.raw_value}" aria-valuemin="0" aria-valuemax="100">
                                                <t t-esc="record.progress.raw_value"/>%
                                            </div>
                                        </div>
                                    </div>
                                    <div class="mt8" t-if="record.is_overdue.raw_value">
                                        <span class="badge badge-danger">OVERDUE</span>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Performance Workflow Step List View -->
        <record id="view_performance_workflow_step_list" model="ir.ui.view">
            <field name="name">performance.workflow.step.list</field>
            <field name="model">performance.workflow.step</field>
            <field name="arch" type="xml">
                <list string="Workflow Steps" editable="bottom">
                    <field name="sequence" widget="handle"/>
                    <field name="workflow_id"/>
                    <field name="name"/>
                    <field name="step_type"/>
                    <field name="assigned_user_id"/>
                    <field name="estimated_duration"/>
                    <field name="start_date"/>
                    <field name="completion_date"/>
                    <field name="state" widget="badge"/>
                    <button name="action_start" string="Start" type="object" icon="fa-play" invisible="state != 'pending'"/>
                    <button name="action_complete" string="Complete" type="object" icon="fa-check" invisible="state != 'in_progress'"/>
                </list>
            </field>
        </record>

        <!-- Performance Workflow Step Form View -->
        <record id="view_performance_workflow_step_form" model="ir.ui.view">
            <field name="name">performance.workflow.step.form</field>
            <field name="model">performance.workflow.step</field>
            <field name="arch" type="xml">
                <form string="Workflow Step">
                    <header>
                        <button name="action_start" string="Start" type="object" class="btn-primary" invisible="state != 'pending'"/>
                        <button name="action_complete" string="Complete" type="object" class="btn-success" invisible="state != 'in_progress'"/>
                        <field name="state" widget="statusbar" statusbar_visible="pending,in_progress,completed"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Step Name"/>
                            </h1>
                        </div>

                        <group>
                            <group>
                                <field name="workflow_id"/>
                                <field name="step_type"/>
                                <field name="sequence"/>
                            </group>
                            <group>
                                <field name="assigned_user_id"/>
                                <field name="estimated_duration"/>
                                <field name="start_date"/>
                                <field name="completion_date"/>
                            </group>
                        </group>

                        <group string="Description">
                            <field name="description" nolabel="1"/>
                        </group>

                        <group string="Notes">
                            <field name="notes" nolabel="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Actions -->
        <record id="action_performance_workflow" model="ir.actions.act_window">
            <field name="name">Performance Workflows</field>
            <field name="res_model">performance.workflow</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No performance workflows found
                </p>
                <p>
                    Performance workflows help you manage structured review processes
                    for different aspects of your performance management system.
                </p>
            </field>
        </record>



        <!-- Search Views -->
        <record id="view_performance_workflow_search" model="ir.ui.view">
            <field name="name">performance.workflow.search</field>
            <field name="model">performance.workflow</field>
            <field name="arch" type="xml">
                <search string="Search Workflows">
                    <field name="name"/>
                    <field name="workflow_type"/>
                    <field name="scope"/>
                    <field name="initiator_id"/>
                    <field name="reviewer_ids"/>
                    <field name="approver_ids"/>
                    
                    <filter string="My Workflows" name="my_workflows" domain="['|', ('initiator_id', '=', uid), '|', ('reviewer_ids', 'in', [uid]), ('approver_ids', 'in', [uid])]"/>
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="In Progress" name="in_progress" domain="[('state', 'in', ['initiated', 'in_review'])]"/>
                    <filter string="Overdue" name="overdue" domain="[('is_overdue', '=', True)]"/>
                    <separator/>
                    <filter string="This Month" name="this_month" domain="[('due_date', '>=', (context_today().replace(day=1)).strftime('%Y-%m-%d'))]"/>
                    
                    <group expand="0" string="Group By">
                        <filter string="Workflow Type" name="group_by_workflow_type" context="{'group_by': 'workflow_type'}"/>
                        <filter string="Scope" name="group_by_scope" context="{'group_by': 'scope'}"/>
                        <filter string="State" name="group_by_state" context="{'group_by': 'state'}"/>
                        <filter string="Due Date" name="group_by_due_date" context="{'group_by': 'due_date'}"/>
                    </group>
                </search>
            </field>
        </record>

    </data>
</odoo>

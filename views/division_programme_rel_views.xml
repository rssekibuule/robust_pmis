<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Division-Programme Relationship List View -->
        <record id="view_division_programme_rel_list" model="ir.ui.view">
            <field name="name">division.programme.rel.list</field>
            <field name="model">division.programme.rel</field>
            <field name="arch" type="xml">
                <list string="Division Programme Performance"
                      decoration-success="performance_score >= 80"
                      decoration-warning="50 &lt;= performance_score and performance_score &lt; 80"
                      decoration-danger="performance_score &lt; 50"
                      default_order="division_sequence,performance_score desc">
                    <field name="division_id" string="Division"/>
                    <field name="programme_id" string="Programme"/>
                    <field name="implementation_status" string="Status"/>
                    <field name="priority_level" string="Priority"/>
                    <field name="completion_percentage" string="Completion %" widget="percentage"/>
                    <field name="performance_score" string="Performance Score" widget="percentage"/>
                    <field name="budget_utilization" string="Budget Utilization %" widget="percentage"/>
                    <field name="beneficiary_achievement" string="Beneficiary Achievement %" widget="percentage"/>
                    <field name="target_beneficiaries" string="Target Beneficiaries"/>
                    <field name="actual_beneficiaries" string="Actual Beneficiaries"/>
                    <field name="is_on_track" string="On Track" widget="boolean"/>
                    <field name="requires_attention" string="Needs Attention" widget="boolean"/>
                    <field name="division_sequence" invisible="1"/>
                </list>
            </field>
        </record>
        
        <!-- Division-Programme Relationship Form View -->
        <record id="view_division_programme_rel_form" model="ir.ui.view">
            <field name="name">division.programme.rel.form</field>
            <field name="model">division.programme.rel</field>
            <field name="arch" type="xml">
                <form string="Division Programme Performance">
                    <header>
                        <button name="action_start_implementation" string="Start Implementation" 
                                type="object" class="btn-primary"
                                invisible="implementation_status != 'not_started'"/>
                        <button name="action_complete_implementation" string="Mark Complete" 
                                type="object" class="btn-success"
                                invisible="implementation_status == 'completed'"/>
                        <button name="action_suspend_implementation" string="Suspend" 
                                type="object" class="btn-warning"
                                invisible="implementation_status == 'suspended'"/>
                        <field name="implementation_status" widget="statusbar" 
                               statusbar_visible="not_started,planning,implementing,monitoring,completed"/>
                    </header>
                    
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <div class="oe_stat_button">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="performance_score" widget="percentage"/>
                                    </span>
                                    <span class="o_stat_text">Performance Score</span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="oe_title">
                            <h1>
                                <field name="display_name" readonly="1"/>
                            </h1>
                        </div>
                        
                        <group>
                            <group name="basic_info" string="Basic Information">
                                <field name="division_id" options="{'no_create': True}"/>
                                <field name="programme_id" options="{'no_create': True}"/>
                                <field name="priority_level"/>
                                <field name="active"/>
                            </group>
                            
                            <group name="performance_info" string="Performance Overview">
                                <field name="completion_percentage" widget="percentage"/>
                                <field name="performance_score" widget="percentage" readonly="1"/>
                                <field name="is_on_track" readonly="1"/>
                                <field name="requires_attention" readonly="1"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Implementation Details" name="implementation">
                                <group>
                                    <group name="dates" string="Timeline">
                                        <field name="start_date"/>
                                        <field name="end_date"/>
                                        <field name="last_review_date"/>
                                        <field name="next_review_date"/>
                                    </group>
                                    
                                    <group name="responsible" string="Responsible Persons">
                                        <field name="division_coordinator_id"/>
                                        <field name="programme_officer_id"/>
                                    </group>
                                </group>
                            </page>
                            
                            <page string="Budget &amp; Resources" name="budget">
                                <group>
                                    <group name="budget_info" string="Budget Information">
                                        <field name="allocated_budget"/>
                                        <field name="utilized_budget"/>
                                        <field name="budget_utilization" widget="percentage" readonly="1"/>
                                        <field name="currency_id" invisible="1"/>
                                    </group>
                                    
                                    <group name="beneficiaries" string="Beneficiaries">
                                        <field name="target_beneficiaries"/>
                                        <field name="actual_beneficiaries"/>
                                        <field name="beneficiary_achievement" widget="percentage" readonly="1"/>
                                    </group>
                                </group>
                            </page>
                            
                            <page string="Performance Metrics" name="performance">
                                <group>
                                    <group name="status_indicators" string="Status Indicators">
                                        <field name="is_on_track" readonly="1"/>
                                        <field name="is_delayed" readonly="1"/>
                                        <field name="requires_attention" readonly="1"/>
                                    </group>
                                    
                                    <group name="computed_fields" string="Computed Information">
                                        <field name="division_name" readonly="1"/>
                                        <field name="programme_name" readonly="1"/>
                                        <field name="division_sequence" readonly="1"/>
                                        <field name="programme_sequence" readonly="1"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>
        
        <!-- Division-Programme Relationship Kanban View -->
        <record id="view_division_programme_rel_kanban" model="ir.ui.view">
            <field name="name">division.programme.rel.kanban</field>
            <field name="model">division.programme.rel</field>
            <field name="arch" type="xml">
                <kanban default_group_by="division_id" class="o_kanban_small_column">
                    <field name="division_id"/>
                    <field name="programme_id"/>
                    <field name="implementation_status"/>
                    <field name="priority_level"/>
                    <field name="performance_score"/>
                    <field name="completion_percentage"/>
                    <field name="is_on_track"/>
                    <field name="requires_attention"/>
                    <field name="active"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click 
                                 #{record.performance_score.raw_value >= 80 ? 'oe_kanban_color_5' : 
                                   record.performance_score.raw_value >= 50 ? 'oe_kanban_color_3' : 'oe_kanban_color_2'}
                                 #{!record.active.raw_value ? 'o_kanban_color_2' : ''}">
                                <div class="o_kanban_content">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title">
                                                <field name="programme_name"/>
                                            </strong>
                                            <div class="o_kanban_record_subtitle">
                                                <field name="division_name"/>
                                            </div>
                                        </div>
                                        <div class="o_kanban_manage_button_section">
                                            <a class="o_kanban_manage_toggle_button" href="#">
                                                <i class="fa fa-ellipsis-v" role="img" aria-label="Manage" title="Manage"/>
                                            </a>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_body">
                                        <div class="row">
                                            <div class="col-6">
                                                <span title="Implementation Status">📊</span> 
                                                <field name="implementation_status"/>
                                            </div>
                                            <div class="col-6">
                                                <span title="Priority">⚡</span> 
                                                <field name="priority_level"/>
                                            </div>
                                        </div>
                                        <div class="row mt-2">
                                            <div class="col-6">
                                                <span title="Performance Score">🎯</span> 
                                                <field name="performance_score" widget="percentage"/>
                                            </div>
                                            <div class="col-6">
                                                <span title="Completion">✅</span> 
                                                <field name="completion_percentage" widget="percentage"/>
                                            </div>
                                        </div>
                                        <div class="row mt-2" t-if="record.requires_attention.raw_value">
                                            <div class="col-12">
                                                <span class="badge badge-warning">⚠️ Needs Attention</span>
                                            </div>
                                        </div>
                                        <div class="row mt-2" t-if="record.is_on_track.raw_value">
                                            <div class="col-12">
                                                <span class="badge badge-success">✅ On Track</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        
        <!-- Division-Programme Relationship Search View -->
        <record id="view_division_programme_rel_search" model="ir.ui.view">
            <field name="name">division.programme.rel.search</field>
            <field name="model">division.programme.rel</field>
            <field name="arch" type="xml">
                <search string="Division Programme Performance">
                    <field name="division_id" string="Division"/>
                    <field name="programme_id" string="Programme"/>
                    <field name="implementation_status" string="Status"/>
                    <field name="priority_level" string="Priority"/>
                    
                    <filter name="active" string="Active" domain="[('active', '=', True)]"/>
                    <filter name="inactive" string="Inactive" domain="[('active', '=', False)]"/>
                    
                    <separator/>
                    <filter name="on_track" string="On Track" domain="[('is_on_track', '=', True)]"/>
                    <filter name="needs_attention" string="Needs Attention" domain="[('requires_attention', '=', True)]"/>
                    <filter name="delayed" string="Delayed" domain="[('is_delayed', '=', True)]"/>
                    
                    <separator/>
                    <filter name="high_performance" string="High Performance (≥80%)" 
                            domain="[('performance_score', '>=', 80)]"/>
                    <filter name="medium_performance" string="Medium Performance (50-79%)"
                            domain="[('performance_score', '>=', 50), ('performance_score', '&lt;', 80)]"/>
                    <filter name="low_performance" string="Low Performance (&lt;50%)"
                            domain="[('performance_score', '&lt;', 50)]"/>
                    
                    <separator/>
                    <filter name="critical_priority" string="Critical Priority" 
                            domain="[('priority_level', '=', 'critical')]"/>
                    <filter name="high_priority" string="High Priority" 
                            domain="[('priority_level', '=', 'high')]"/>
                    <filter name="medium_priority" string="Medium Priority" 
                            domain="[('priority_level', '=', 'medium')]"/>
                    <filter name="low_priority" string="Low Priority" 
                            domain="[('priority_level', '=', 'low')]"/>
                    
                    <separator/>
                    <filter name="implementing" string="Implementing" 
                            domain="[('implementation_status', '=', 'implementing')]"/>
                    <filter name="planning" string="Planning" 
                            domain="[('implementation_status', '=', 'planning')]"/>
                    <filter name="completed" string="Completed" 
                            domain="[('implementation_status', '=', 'completed')]"/>
                    <filter name="suspended" string="Suspended" 
                            domain="[('implementation_status', '=', 'suspended')]"/>
                    
                    <group expand="0" string="Group By">
                        <filter name="group_by_division" string="Division" 
                                context="{'group_by': 'division_id'}"/>
                        <filter name="group_by_programme" string="Programme" 
                                context="{'group_by': 'programme_id'}"/>
                        <filter name="group_by_status" string="Implementation Status" 
                                context="{'group_by': 'implementation_status'}"/>
                        <filter name="group_by_priority" string="Priority Level" 
                                context="{'group_by': 'priority_level'}"/>
                    </group>
                </search>
            </field>
        </record>
        
    </data>
</odoo>

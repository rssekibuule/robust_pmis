<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Programme Search View: intuitive filters and group-by options for kanban/list/graph -->
        <record id="view_kcca_programme_search" model="ir.ui.view">
            <field name="name">kcca.programme.search</field>
            <field name="model">kcca.programme</field>
            <field name="arch" type="xml">
                <search string="Search KCCA Programmes">
                    <field name="name" filter_domain="['|', ('name', 'ilike', self), ('code', 'ilike', self)]"/>
                    <filter string="Active" name="active_true" domain="[('active', '=', True)]" help="Only active programmes"/>
                    <filter string="Archived" name="active_false" domain="[('active', '=', False)]" help="Only archived programmes"/>

                    <separator/>
                    <filter string="With Manager" name="with_manager" domain="[('programme_manager_id', '!=', False)]"/>
                    <filter string="Without Manager" name="without_manager" domain="[('programme_manager_id', '=', False)]"/>

                    <separator/>
                    <filter string="Ongoing" name="ongoing" domain="['&amp;', ('start_date', '&lt;=', context_today()), ('end_date', '>=', context_today())]"/>
                    <filter string="Upcoming" name="upcoming" domain="[('start_date', '>', context_today())]"/>
                    <filter string="Completed" name="completed" domain="[('end_date', '&lt;', context_today())]"/>

                    <separator/>
                    <filter string="Excellent (≥80%)" name="perf_excellent" domain="[('overall_performance', '>=', 80)]"/>
                    <filter string="Good (60–79%)" name="perf_good" domain="['&amp;', ('overall_performance', '>=', 60), ('overall_performance', '&lt;', 80)]"/>
                    <filter string="Fair (40–59%)" name="perf_fair" domain="['&amp;', ('overall_performance', '>=', 40), ('overall_performance', '&lt;', 60)]"/>
                    <filter string="Poor (&lt;40%)" name="perf_poor" domain="[('overall_performance', '&lt;', 40)]"/>

                    <group expand="0" string="Group By">
                        <!-- Many2one groupings are graph-safe -->
                        <filter string="Implementing Directorate" name="grp_directorate" context="{'group_by': 'directorate_id'}"/>
                        <filter string="Implementing Division" name="grp_division" context="{'group_by': 'division_id'}"/>
                        <filter string="Programme Manager" name="grp_manager" context="{'group_by': 'programme_manager_id'}"/>
                        <separator/>
                        <filter string="Start Month" name="grp_start_month" context="{'group_by': 'start_date:month'}"/>
                        <filter string="Start Year" name="grp_start_year" context="{'group_by': 'start_date:year'}"/>
                        <filter string="End Month" name="grp_end_month" context="{'group_by': 'end_date:month'}"/>
                        <filter string="End Year" name="grp_end_year" context="{'group_by': 'end_date:year'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Programme List View -->
        <record id="view_kcca_programme_list" model="ir.ui.view">
            <field name="name">kcca.programme.list</field>
            <field name="model">kcca.programme</field>
            <field name="arch" type="xml">
                <list string="KCCA Programmes" decoration-muted="not active">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="implementing_directorate_ids" widget="many2many_tags"/>
                    <field name="programme_manager_id"/>
                    <field name="objective_count" string="Objectives"/>
                    <field name="indicator_count" string="Indicators"/>
                    <field name="overall_performance" widget="progressbar"/>
                    <field name="active" invisible="1"/>
                </list>
            </field>
        </record>

        <!-- Programme Form View -->
        <record id="view_kcca_programme_form" model="ir.ui.view">
            <field name="name">kcca.programme.form</field>
            <field name="model">kcca.programme</field>
            <field name="arch" type="xml">
                <form string="KCCA Programme" class="o_form_view_compact_chatter">
                    <header>
                        <field name="active" widget="boolean_toggle"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_objectives" type="object"
                                    class="oe_stat_button" icon="fa-bullseye">
                                <field name="objective_count" widget="statinfo" string="Objectives"/>
                            </button>
                            <button name="action_view_indicators" type="object"
                                    class="oe_stat_button" icon="fa-tachometer">
                                <field name="indicator_count" widget="statinfo" string="Indicators"/>
                            </button>
                        </div>

                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Programme Name"/>
                            </h1>
                        </div>

                        <group>
                            <group string="Basic Information">
                                <field name="code"/>
                                <field name="sequence"/>
                            </group>
                            <group string="Performance">
                                <field name="overall_performance" widget="progressbar"/>
                            </group>
                        </group>

                        <group>
                            <group string="Implementation">
                                <field name="implementing_directorate_ids" widget="many2many_tags"/>
                                <field name="programme_manager_id"/>
                            </group>
                            <group string="Timeline &amp; Budget">
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="budget"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                        </group>

                        <separator string="Legacy Implementation Fields (for backward compatibility)"/>
                        <group>
                            <group>
                                <field name="directorate_id" readonly="1"/>
                                <field name="division_id" readonly="1"/>
                            </group>
                            <group>
                                <field name="implementing_unit" readonly="1"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Description">
                                <field name="description" widget="html"/>
                            </page>
                            <page string="Programme Objectives">
                                <field name="objective_ids" context="{'tree_view_ref': 'robust_pmis.view_programme_objective_tree_embedded'}"/>
                            </page>
                            <page string="Performance Indicators">
                                <field name="performance_indicator_ids">
                                    <list>
                                        <field name="name"/>
                                        <field name="current_value"/>
                                        <field name="target_value"/>
                                        <field name="measurement_unit"/>
                                        <field name="achievement_percentage" widget="progressbar"/>
                                        <field name="status"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Strategic Linkage">
                                <field name="strategic_objective_ids">
                                    <list>
                                        <field name="name"/>
                                        <field name="strategic_goal_id"/>
                                        <field name="progress" widget="progressbar"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Implementing Directorates">
                                <field name="implementing_directorate_ids">
                                    <list>
                                        <field name="name"/>
                                        <field name="code"/>
                                        <field name="director_id"/>
                                        <field name="overall_performance" widget="progressbar"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <!-- Programme Kanban View -->
        <record id="view_kcca_programme_kanban" model="ir.ui.view">
            <field name="name">kcca.programme.kanban</field>
            <field name="model">kcca.programme</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="implementing_unit"/>
                    <field name="overall_performance"/>
                    <field name="objective_count"/>
                    <field name="indicator_count"/>
                    <templates>
                        <t t-name="card">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <div class="o_kanban_record_subtitle">
                                            <field name="code"/> - <field name="implementing_unit"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="row">
                                        <div class="col-6">
                                            <span>Objectives: <t t-out="record.objective_count.value"/></span><br/>
                                            <span>Indicators: <t t-out="record.indicator_count.value"/></span>
                                        </div>
                                        <div class="col-6">
                                            <div class="text-right">
                                                <field name="overall_performance" widget="progressbar"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Link search view to the action after both are defined (update existing action) -->
        <record id="action_kcca_programme" model="ir.actions.act_window">
            <field name="search_view_id" ref="view_kcca_programme_search"/>
        </record>

    </data>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Programme List View -->
        <record id="view_kcca_programme_list" model="ir.ui.view">
            <field name="name">kcca.programme.list</field>
            <field name="model">kcca.programme</field>
            <field name="arch" type="xml">
                <list string="KCCA Programmes" decoration-muted="not active">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="implementing_directorate_ids" widget="many2many_tags"/>
                    <field name="programme_manager_id"/>
                    <field name="objective_count" string="Objectives"/>
                    <field name="indicator_count" string="Indicators"/>
                    <field name="overall_performance" widget="progressbar"/>
                    <field name="active" invisible="1"/>
                </list>
            </field>
        </record>

        <!-- Programme Form View -->
        <record id="view_kcca_programme_form" model="ir.ui.view">
            <field name="name">kcca.programme.form</field>
            <field name="model">kcca.programme</field>
            <field name="arch" type="xml">
                <form string="KCCA Programme" class="o_form_view_compact_chatter">
                    <header>
                        <field name="active" widget="boolean_toggle"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_objectives" type="object"
                                    class="oe_stat_button" icon="fa-bullseye">
                                <field name="objective_count" widget="statinfo" string="Objectives"/>
                            </button>
                            <button name="action_view_indicators" type="object"
                                    class="oe_stat_button" icon="fa-tachometer">
                                <field name="indicator_count" widget="statinfo" string="Indicators"/>
                            </button>
                        </div>

                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Programme Name"/>
                            </h1>
                        </div>

                        <group>
                            <group string="Basic Information">
                                <field name="code"/>
                                <field name="sequence"/>
                            </group>
                            <group string="Performance">
                                <field name="overall_performance" widget="progressbar"/>
                            </group>
                        </group>

                        <group>
                            <group string="Implementation">
                                <field name="implementing_directorate_ids" widget="many2many_tags"/>
                                <field name="programme_manager_id"/>
                            </group>
                            <group string="Timeline &amp; Budget">
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="budget"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                        </group>

                        <separator string="Legacy Implementation Fields (for backward compatibility)"/>
                        <group>
                            <group>
                                <field name="directorate_id" readonly="1"/>
                                <field name="division_id" readonly="1"/>
                            </group>
                            <group>
                                <field name="implementing_unit" readonly="1"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Description">
                                <field name="description" widget="html"/>
                            </page>
                            <page string="Programme Objectives">
                                <field name="objective_ids" context="{'tree_view_ref': 'robust_pmis.view_programme_objective_tree_embedded'}"/>
                            </page>
                            <page string="Performance Indicators">
                                <field name="performance_indicator_ids">
                                    <list>
                                        <field name="name"/>
                                        <field name="current_value"/>
                                        <field name="target_value"/>
                                        <field name="measurement_unit"/>
                                        <field name="achievement_percentage" widget="progressbar"/>
                                        <field name="status"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Strategic Linkage">
                                <field name="strategic_objective_ids">
                                    <list>
                                        <field name="name"/>
                                        <field name="strategic_goal_id"/>
                                        <field name="progress" widget="progressbar"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Implementing Directorates">
                                <field name="implementing_directorate_ids">
                                    <list>
                                        <field name="name"/>
                                        <field name="code"/>
                                        <field name="director_id"/>
                                        <field name="overall_performance" widget="progressbar"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <!-- Programme Kanban View -->
        <record id="view_kcca_programme_kanban" model="ir.ui.view">
            <field name="name">kcca.programme.kanban</field>
            <field name="model">kcca.programme</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="implementing_unit"/>
                    <field name="overall_performance"/>
                    <field name="objective_count"/>
                    <field name="indicator_count"/>
                    <templates>
                        <t t-name="card">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <div class="o_kanban_record_subtitle">
                                            <field name="code"/> - <field name="implementing_unit"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="row">
                                        <div class="col-6">
                                            <span>Objectives: <t t-esc="record.objective_count.value"/></span><br/>
                                            <span>Indicators: <t t-esc="record.indicator_count.value"/></span>
                                        </div>
                                        <div class="col-6">
                                            <div class="text-right">
                                                <field name="overall_performance" widget="progressbar"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

    </data>
</odoo>

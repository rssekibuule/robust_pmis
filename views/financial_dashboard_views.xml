<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Financial Dashboard Tree View -->
        <record id="view_financial_dashboard_tree" model="ir.ui.view">
            <field name="name">financial.dashboard.tree</field>
            <field name="model">financial.dashboard</field>
            <field name="arch" type="xml">
                <list string="Financial Dashboards" decoration-info="state=='draft'" decoration-success="state=='active'">
                    <field name="name"/>
                    <field name="dashboard_type"/>
                    <field name="dashboard_date"/>
                    <field name="total_budget" widget="float" string="Budget (UGX Bns)"/>
                    <field name="performance_score" widget="progressbar"/>
                    <field name="efficiency_index" widget="float"/>
                    <field name="risk_score" widget="progressbar"/>
                    <field name="last_refresh"/>
                    <field name="state"/>
                    <field name="access_level"/>
                    <button name="refresh_dashboard" string="Refresh" type="object" class="btn-sm btn-secondary"/>
                </list>
            </field>
        </record>

        <!-- Financial Dashboard Form View -->
        <record id="view_financial_dashboard_form" model="ir.ui.view">
            <field name="name">financial.dashboard.form</field>
            <field name="model">financial.dashboard</field>
            <field name="arch" type="xml">
                <form string="Financial Dashboard">
                    <header>
                        <button name="generate_executive_dashboard" string="Generate Executive Dashboard" type="object" class="btn-primary" invisible="dashboard_type != 'executive'"/>
                        <button name="refresh_dashboard" string="Refresh Dashboard" type="object" class="btn-secondary"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,active"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Dashboard Name..."/>
                            </h1>
                        </div>
                        
                        <group>
                            <group>
                                <field name="financial_strategy_id" options="{'no_create': True}"/>
                                <field name="dashboard_type"/>
                                <field name="dashboard_date"/>
                                <field name="refresh_frequency"/>
                                <field name="last_refresh"/>
                            </group>
                            <group>
                                <field name="total_budget" widget="float"/>
                                <field name="budget_utilization" widget="progressbar"/>
                                <field name="performance_score" widget="progressbar"/>
                                <field name="efficiency_index" widget="float"/>
                                <field name="risk_score" widget="progressbar"/>
                                <field name="access_level"/>
                                <field name="is_public"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Dashboard Overview" name="overview">
                                <group>
                                    <field name="executive_summary" widget="html"/>
                                </group>
                                <separator string="Key Alerts"/>
                                <field name="key_alerts" widget="html"/>
                                <separator string="Recommendations"/>
                                <field name="recommendations" widget="html"/>
                            </page>
                            
                            <page string="Key Performance Indicators" name="kpis">
                                <group>
                                    <group>
                                        <field name="kpi_budget_variance" widget="float"/>
                                        <field name="kpi_funding_ratio" widget="float"/>
                                        <field name="kpi_programme_efficiency" widget="float"/>
                                        <field name="kpi_performance_trend"/>
                                    </group>
                                </group>
                            </page>
                            
                            <page string="Dashboard Widgets" name="widgets">
                                <field name="widget_ids">
                                    <list string="Dashboard Widgets" editable="bottom">
                                        <field name="name"/>
                                        <field name="widget_type"/>
                                        <field name="chart_type" invisible="widget_type != 'chart'"/>
                                        <field name="data_source"/>
                                        <field name="position_x"/>
                                        <field name="position_y"/>
                                        <field name="width"/>
                                        <field name="height"/>
                                        <field name="is_active"/>
                                    </list>
                                    <form string="Dashboard Widget">
                                        <group>
                                            <group>
                                                <field name="name"/>
                                                <field name="widget_type"/>
                                                <field name="chart_type" invisible="widget_type != 'chart'"/>
                                                <field name="data_source"/>
                                            </group>
                                            <group>
                                                <field name="position_x"/>
                                                <field name="position_y"/>
                                                <field name="width"/>
                                                <field name="height"/>
                                                <field name="color_scheme"/>
                                                <field name="is_active"/>
                                                <field name="refresh_interval"/>
                                            </group>
                                        </group>
                                        <group>
                                            <field name="title"/>
                                            <field name="description"/>
                                        </group>
                                        <separator string="Widget Data (JSON)"/>
                                        <field name="widget_data" widget="text"/>
                                    </form>
                                </field>
                            </page>
                            
                            <page string="Dashboard Data" name="data">
                                <field name="dashboard_summary" widget="html"/>
                                <separator string="Technical Data (for debugging)" invisible="not context.get('debug', False)"/>
                                <group invisible="not context.get('debug', False)">
                                    <field name="dashboard_data" widget="text" readonly="1"/>
                                </group>
                            </page>
                            
                            <page string="Related Components" name="components">
                                <group>
                                    <field name="programme_ids" widget="many2many_tags"/>
                                    <field name="directorate_ids" widget="many2many_tags"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <!-- Financial Dashboard Search View -->
        <record id="view_financial_dashboard_search" model="ir.ui.view">
            <field name="name">financial.dashboard.search</field>
            <field name="model">financial.dashboard</field>
            <field name="arch" type="xml">
                <search string="Financial Dashboards">
                    <field name="name"/>
                    <field name="financial_strategy_id"/>
                    <field name="dashboard_type"/>
                    <field name="access_level"/>
                    
                    <filter string="Executive" name="executive" domain="[('dashboard_type', '=', 'executive')]"/>
                    <filter string="Operational" name="operational" domain="[('dashboard_type', '=', 'operational')]"/>
                    <filter string="Programme" name="programme" domain="[('dashboard_type', '=', 'programme')]"/>
                    <filter string="Budget Tracking" name="budget_tracking" domain="[('dashboard_type', '=', 'budget_tracking')]"/>
                    
                    <separator/>
                    <filter string="Active" name="active" domain="[('state', '=', 'active')]"/>
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Public" name="public" domain="[('is_public', '=', True)]"/>
                    
                    <separator/>
                    <filter string="High Risk" name="high_risk" domain="[('risk_score', '>=', 70)]"/>
                    <filter string="Recently Updated" name="recent" domain="[('last_refresh', '>=', (context_today() - datetime.timedelta(days=1)).strftime('%Y-%m-%d %H:%M:%S'))]"/>
                    
                    <group expand="0" string="Group By">
                        <filter string="Dashboard Type" name="group_dashboard_type" context="{'group_by': 'dashboard_type'}"/>
                        <filter string="Access Level" name="group_access_level" context="{'group_by': 'access_level'}"/>
                        <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                        <filter string="Dashboard Date" name="group_dashboard_date" context="{'group_by': 'dashboard_date:month'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Financial Dashboard Kanban View -->
        <record id="view_financial_dashboard_kanban" model="ir.ui.view">
            <field name="name">financial.dashboard.kanban</field>
            <field name="model">financial.dashboard</field>
            <field name="arch" type="xml">
                <kanban default_group_by="dashboard_type" class="o_kanban_small_column">
                    <field name="name"/>
                    <field name="dashboard_type"/>
                    <field name="total_budget"/>
                    <field name="performance_score"/>
                    <field name="risk_score"/>
                    <field name="state"/>
                    <field name="last_refresh"/>
                    <field name="widget_count"/>
                    
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <br/>
                                        <small class="o_kanban_record_subtitle text-muted">
                                            <field name="dashboard_type"/>
                                        </small>
                                    </div>
                                    <div class="o_kanban_record_top_right">
                                        <div class="o_kanban_record_badges">
                                            <span t-if="record.state.raw_value == 'active'" class="badge badge-success">Active</span>
                                            <span t-if="record.state.raw_value == 'draft'" class="badge badge-secondary">Draft</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="row">
                                        <div class="col-6">
                                            <strong>Budget:</strong><br/>
                                            UGX <field name="total_budget"/> Bns
                                        </div>
                                        <div class="col-6">
                                            <strong>Performance:</strong><br/>
                                            <field name="performance_score"/>%
                                        </div>
                                    </div>
                                    <div class="row mt-2">
                                        <div class="col-6">
                                            <strong>Risk Score:</strong><br/>
                                            <field name="risk_score"/>%
                                        </div>
                                        <div class="col-6">
                                            <strong>Widgets:</strong><br/>
                                            <field name="widget_count"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        Last: <field name="last_refresh"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <button name="refresh_dashboard" string="Refresh" type="object" class="btn btn-sm btn-secondary"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Financial Dashboard Action -->
        <record id="action_financial_dashboard" model="ir.actions.act_window">
            <field name="name">Financial Dashboards</field>
            <field name="res_model">financial.dashboard</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first Financial Dashboard!
                </p>
                <p>
                    Financial Dashboards provide real-time insights into budget performance,
                    funding sources, programme efficiency, and key financial metrics.
                </p>
            </field>
        </record>

    </data>
</odoo>

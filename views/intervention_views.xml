<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Intervention List View -->
        <record id="view_intervention_list" model="ir.ui.view">
            <field name="name">intervention.list</field>
            <field name="model">intervention</field>
            <field name="arch" type="xml">
                <list string="Interventions" decoration-muted="not active">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="outcome_id"/>
                    <field name="programme_id"/>
                    <field name="responsible_user_id"/>
                    <field name="output_count" string="Outputs"/>
                    <field name="piap_action_count" string="PIAP Actions"/>
                    <field name="indicator_count" string="Indicators"/>
                    <field name="progress" widget="progressbar"/>
                    <field name="active" invisible="1"/>
                </list>
            </field>
        </record>

        <!-- Intervention Form View -->
        <record id="view_intervention_form" model="ir.ui.view">
            <field name="name">intervention.form</field>
            <field name="model">intervention</field>
            <field name="arch" type="xml">
                <form string="Intervention" class="o_form_view_compact_chatter">
                    <header>
                        <field name="active" widget="boolean_toggle"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_outputs" type="object"
                                    class="oe_stat_button" icon="fa-tasks">
                                <field name="output_count" widget="statinfo" string="Outputs"/>
                            </button>
                            <button name="action_view_piap_actions" type="object"
                                    class="oe_stat_button" icon="fa-list-ul">
                                <field name="piap_action_count" widget="statinfo" string="PIAP Actions"/>
                            </button>
                            <button name="action_view_indicators" type="object"
                                    class="oe_stat_button" icon="fa-tachometer">
                                <field name="indicator_count" widget="statinfo" string="Indicators"/>
                            </button>
                        </div>

                        <group>
                            <group>
                                <field name="name"/>
                                <field name="outcome_id"/>
                                <field name="programme_id" readonly="1"/>
                                <field name="objective_id" readonly="1"/>
                            </group>
                            <group>
                                <field name="sequence"/>
                                <field name="responsible_user_id"/>
                                <field name="progress" widget="progressbar"/>
                            </group>
                        </group>

                        <group>
                            <group string="Timeline">
                                <field name="start_date"/>
                                <field name="end_date"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Description">
                                <field name="description" widget="html"/>
                            </page>
                            <page string="Outputs">
                                <field name="output_ids">
                                    <list editable="bottom">
                                        <field name="sequence" widget="handle"/>
                                        <field name="name"/>
                                        <field name="responsible_user_id"/>
                                        <field name="piap_action_count" string="PIAP Actions"/>
                                        <field name="indicator_count" string="Indicators"/>
                                        <field name="progress" widget="progressbar"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <!-- Intervention Search View -->
        <record id="view_intervention_search" model="ir.ui.view">
            <field name="name">intervention.search</field>
            <field name="model">intervention</field>
            <field name="arch" type="xml">
                <search string="Search Interventions">
                    <field name="name" string="Intervention"/>
                    <field name="outcome_id"/>
                    <field name="programme_id"/>
                    <field name="responsible_user_id"/>
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                    <separator/>
                    <filter string="My Interventions" name="my_interventions" 
                            domain="[('responsible_user_id', '=', uid)]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Intermediate Outcome" name="group_outcome" 
                                context="{'group_by': 'outcome_id'}"/>
                        <filter string="Programme" name="group_programme" 
                                context="{'group_by': 'programme_id'}"/>
                        <filter string="Responsible Person" name="group_responsible" 
                                context="{'group_by': 'responsible_user_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Intervention Action -->
        <record id="action_intervention" model="ir.actions.act_window">
            <field name="name">Interventions</field>
            <field name="res_model">intervention</field>
            <field name="view_mode">list,form</field>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first intervention!
                </p>
                <p>
                    Interventions are the means through which intermediate outcomes are achieved.
                    Each intervention contains multiple outputs that deliver specific results.
                </p>
            </field>
        </record>

    </data>
</odoo>

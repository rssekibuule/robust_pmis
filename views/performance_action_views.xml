<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Performance Action List View -->
        <record id="view_performance_action_list" model="ir.ui.view">
            <field name="name">performance.action.list</field>
            <field name="model">performance.action</field>
            <field name="arch" type="xml">
                <list string="Performance Actions" decoration-muted="state == 'rejected'"
                      decoration-success="state == 'approved'"
                      decoration-info="state == 'submitted'"
                      decoration-warning="state == 'draft'">
                    <field name="date"/>
                    <field name="name"/>
                    <field name="indicator_name"/>
                    <field name="programme_name"/>
                    <field name="action_type"/>
                    <field name="previous_value"/>
                    <field name="new_value"/>
                    <field name="value_change"/>
                    <field name="action_by_id"/>
                    <field name="state"/>
                </list>
            </field>
        </record>

        <!-- Performance Action Form View -->
        <record id="view_performance_action_form" model="ir.ui.view">
            <field name="name">performance.action.form</field>
            <field name="model">performance.action</field>
            <field name="arch" type="xml">
                <form string="Performance Action">
                    <header>
                        <button name="action_submit" type="object" string="Submit for Approval"
                                class="oe_highlight" invisible="state != 'draft'"/>
                        <button name="action_approve" type="object" string="Approve"
                                class="oe_highlight" invisible="state != 'submitted'"
                                groups="robust_pmis.group_kcca_pmis_manager"/>
                        <button name="action_reject" type="object" string="Reject"
                                invisible="state != 'submitted'"
                                groups="robust_pmis.group_kcca_pmis_manager"/>
                        <button name="action_reset_to_draft" type="object" string="Reset to Draft"
                                invisible="state not in ('rejected', 'submitted')"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,submitted,approved"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Action Name"/>
                            </h1>
                        </div>

                        <group>
                            <group string="Basic Information">
                                <field name="indicator_id"/>
                                <field name="action_type"/>
                                <field name="date"/>
                                <field name="action_by_id"/>
                            </group>
                            <group string="Value Updates">
                                <field name="previous_value"/>
                                <field name="new_value"/>
                                <field name="value_change"/>
                            </group>
                        </group>

                        <group>
                            <group string="Approval">
                                <field name="approved_by_id" readonly="1"/>
                            </group>
                            <group string="Related Information">
                                <field name="programme_name" readonly="1"/>
                                <field name="indicator_name" readonly="1"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Description">
                                <field name="description" widget="html"/>
                            </page>
                            <page string="Progress Details">
                                <group>
                                    <field name="progress_notes"/>
                                    <field name="challenges"/>
                                    <field name="next_steps"/>
                                </group>
                            </page>
                            <page string="Attachments">
                                <field name="attachment_ids" widget="many2many_binary"/>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <!-- Performance Action Kanban View -->
        <record id="view_performance_action_kanban" model="ir.ui.view">
            <field name="name">performance.action.kanban</field>
            <field name="model">performance.action</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile" default_group_by="state">
                    <field name="name"/>
                    <field name="date"/>
                    <field name="indicator_name"/>
                    <field name="action_type"/>
                    <field name="state"/>
                    <field name="value_change"/>
                    <templates>
                        <t t-name="card">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <div class="o_kanban_record_subtitle">
                                            <field name="indicator_name"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="row">
                                        <div class="col-8">
                                            <span>Date: <t t-esc="record.date.value"/></span><br/>
                                            <span>Type: <t t-esc="record.action_type.value"/></span><br/>
                                            <span>Change: <t t-esc="record.value_change.value"/></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

    </data>
</odoo>

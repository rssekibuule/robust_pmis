<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Division Kanban View -->
        <record id="view_kcca_division_kanban" model="ir.ui.view">
            <field name="name">kcca.division.kanban</field>
            <field name="model">kcca.division</field>
            <field name="arch" type="xml">
                <kanban default_group_by="directorate_id" class="o_kanban_small_column">
                    <field name="id"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="directorate_id"/>
                    <field name="head_id"/>
                    <field name="programme_count"/>
                    <field name="overall_performance"/>
                    <field name="active"/>
                    <field name="email"/>
                    <field name="phone"/>
                    <templates>
                        <t t-name="card">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_dropdown_kanban dropdown">
                                    <a class="dropdown-toggle o-no-caret btn" data-bs-toggle="dropdown" href="#" role="button" aria-label="Dropdown menu" title="Dropdown menu">
                                        <span class="fa fa-ellipsis-v"/>
                                    </a>
                                    <div class="dropdown-menu" role="menu">
                                        <a t-if="widget.editable" type="edit" class="dropdown-item">Edit</a>
                                        <a t-if="widget.deletable" type="delete" class="dropdown-item">Delete</a>
                                        <div class="dropdown-divider"/>
                                        <div class="dropdown-item-text text-muted">
                                            <small><field name="code"/></small>
                                        </div>
                                    </div>
                                </div>

                                <div class="oe_kanban_content">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title">
                                                <field name="name"/>
                                            </strong>
                                            <small class="o_kanban_record_subtitle text-muted">
                                                <field name="code"/>
                                            </small>
                                        </div>
                                    </div>

                                    <div class="o_kanban_record_body">
                                        <div class="row">
                                            <div class="col-12">
                                                <span class="fa fa-building" title="Directorate"/>
                                                <field name="directorate_id"/>
                                            </div>
                                        </div>

                                        <div class="row mt-2">
                                            <div class="col-8">
                                                <span class="fa fa-user" title="Head"/>
                                                <field name="head_id"/>
                                            </div>
                                            <div class="col-4 text-end">
                                                <span class="badge badge-pill badge-success">
                                                    <field name="programme_count"/> Prog.
                                                </span>
                                            </div>
                                        </div>

                                        <div class="mt-3">
                                            <div class="text-muted small">Overall Performance</div>
                                            <field name="overall_performance" widget="progressbar"/>
                                        </div>

                                        <div class="mt-2" t-if="record.email.raw_value or record.phone.raw_value">
                                            <div t-if="record.email.raw_value" class="text-muted small">
                                                <span class="fa fa-envelope" title="Email"/> <field name="email"/>
                                            </div>
                                            <div t-if="record.phone.raw_value" class="text-muted small">
                                                <span class="fa fa-phone" title="Phone"/> <field name="phone"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Enhanced Division List View -->
        <record id="view_kcca_division_list" model="ir.ui.view">
            <field name="name">kcca.division.list</field>
            <field name="model">kcca.division</field>
            <field name="arch" type="xml">
                <list string="KCCA Divisions" decoration-muted="not active">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="directorate_id"/>
                    <field name="head_id"/>
                    <field name="programme_count" string="Programmes"/>
                    <field name="overall_performance" widget="progressbar"/>
                    <field name="email"/>
                    <field name="phone"/>
                    <field name="active" invisible="1"/>
                </list>
            </field>
        </record>

        <!-- Enhanced Division Form View -->
        <record id="view_kcca_division_form" model="ir.ui.view">
            <field name="name">kcca.division.form</field>
            <field name="model">kcca.division</field>
            <field name="arch" type="xml">
                <form string="KCCA Division" class="o_form_view_compact_chatter">
                    <header>
                        <field name="active" widget="boolean_toggle"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_programmes" type="object"
                                    class="oe_stat_button" icon="fa-tasks">
                                <field name="programme_count" widget="statinfo" string="Programmes"/>
                            </button>
                            <button name="action_view_division_performance" type="object"
                                    class="oe_stat_button" icon="fa-line-chart">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="overall_performance" widget="percentage"/>
                                    </span>
                                    <span class="o_stat_text">Performance</span>
                                </div>
                            </button>
                        </div>

                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Division Name"/>
                            </h1>
                            <div class="o_row">
                                <field name="code" placeholder="Division Code"/>
                            </div>
                        </div>

                        <group>
                            <group name="basic_info" string="Basic Information">
                                <field name="directorate_id"/>
                                <field name="sequence"/>
                                <field name="active"/>
                            </group>

                            <group name="contact_info" string="Contact Information">
                                <field name="email"/>
                                <field name="phone"/>
                                <field name="office_location"/>
                            </group>
                        </group>

                        <group>
                            <group name="leadership" string="Leadership">
                                <field name="head_id"/>
                                <field name="deputy_head_id"/>
                            </group>

                            <group name="performance" string="Performance Overview">
                                <field name="programme_count" readonly="1"/>
                                <field name="performance_indicator_count" readonly="1"/>
                                <field name="overall_performance" widget="percentage" readonly="1"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Description">
                                <field name="description" widget="html"/>
                            </page>

                            <page string="Direct Programmes">
                                <field name="programme_ids">
                                    <list editable="bottom">
                                        <field name="name"/>
                                        <field name="code"/>
                                        <field name="programme_manager_id"/>
                                        <field name="overall_performance" widget="progressbar"/>
                                    </list>
                                </field>
                            </page>

                            <page string="Programme Implementation">
                                <field name="division_programme_rel_ids">
                                    <list editable="bottom" decoration-success="performance_score >= 80"
                                          decoration-warning="50 &lt;= performance_score and performance_score &lt; 80"
                                          decoration-danger="performance_score &lt; 50">
                                        <field name="programme_id"/>
                                        <field name="implementation_status"/>
                                        <field name="priority_level"/>
                                        <field name="completion_percentage" widget="percentage"/>
                                        <field name="performance_score" widget="percentage"/>
                                        <field name="target_beneficiaries"/>
                                        <field name="actual_beneficiaries"/>
                                        <field name="is_on_track"/>
                                    </list>
                                </field>
                            </page>

                            <page string="Implementing Programmes" name="implementing_programmes">
                                <field name="implementing_programme_ids">
                                    <list>
                                        <field name="name"/>
                                        <field name="code"/>
                                        <field name="directorate_id"/>
                                        <field name="programme_manager_id"/>
                                        <field name="overall_performance" widget="progressbar"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <!-- Division Kanban View -->
        <record id="view_kcca_division_kanban" model="ir.ui.view">
            <field name="name">kcca.division.kanban</field>
            <field name="model">kcca.division</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_small_column">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="directorate_id"/>
                    <field name="programme_count"/>
                    <field name="overall_performance"/>
                    <field name="active"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click
                                 #{record.overall_performance.raw_value >= 80 ? 'oe_kanban_color_5' :
                                   record.overall_performance.raw_value >= 50 ? 'oe_kanban_color_3' : 'oe_kanban_color_2'}
                                 #{!record.active.raw_value ? 'o_kanban_color_2' : ''}">
                                <div class="o_kanban_content">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title">
                                                <field name="name"/>
                                            </strong>
                                            <div class="o_kanban_record_subtitle">
                                                <field name="code"/> - <field name="directorate_id"/>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_body">
                                        <div class="row">
                                            <div class="col-6">
                                                <span title="Programmes">ðŸ“‹</span>
                                                <field name="programme_count"/> programmes
                                            </div>
                                            <div class="col-6">
                                                <span title="Performance">ðŸŽ¯</span>
                                                <field name="overall_performance" widget="percentage"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Division Search View -->
        <record id="view_kcca_division_search" model="ir.ui.view">
            <field name="name">kcca.division.search</field>
            <field name="model">kcca.division</field>
            <field name="arch" type="xml">
                <search string="KCCA Divisions">
                    <field name="name" string="Division"/>
                    <field name="code" string="Code"/>
                    <field name="directorate_id" string="Directorate"/>
                    <field name="head_id" string="Head"/>

                    <filter name="active" string="Active" domain="[('active', '=', True)]"/>
                    <filter name="inactive" string="Inactive" domain="[('active', '=', False)]"/>

                    <separator/>
                    <filter name="high_performance" string="High Performance (â‰¥80%)"
                            domain="[('overall_performance', '>=', 80)]"/>
                    <filter name="medium_performance" string="Medium Performance (50-79%)"
                            domain="[('overall_performance', '>=', 50), ('overall_performance', '&lt;', 80)]"/>
                    <filter name="low_performance" string="Low Performance (&lt;50%)"
                            domain="[('overall_performance', '&lt;', 50)]"/>

                    <group expand="0" string="Group By">
                        <filter name="group_by_directorate" string="Directorate"
                                context="{'group_by': 'directorate_id'}"/>
                        <filter name="group_by_head" string="Division Head"
                                context="{'group_by': 'head_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Division Action -->
        <record id="action_kcca_division" model="ir.actions.act_window">
            <field name="name">KCCA Divisions</field>
            <field name="res_model">kcca.division</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="search_view_id" ref="view_kcca_division_search"/>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first KCCA Division
                </p>
                <p>
                    KCCA divisions are territorial administrative units that implement
                    programmes within their geographical boundaries.
                </p>
            </field>
        </record>

    </data>
</odoo>

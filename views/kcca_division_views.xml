<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Division Kanban View -->
        <record id="view_kcca_division_kanban" model="ir.ui.view">
            <field name="name">kcca.division.kanban</field>
            <field name="model">kcca.division</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_small_column o_divisions_dashboard">
                    <field name="id"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="directorate_id"/>
                    <field name="head_id"/>
                    <field name="programme_count"/>
                    <field name="division_kpi_count"/>
                    <field name="overall_performance"/>
                    <field name="implementation_coverage_percent"/>
                    <field name="programme_pi_count"/>
                    <field name="programme_pi_avg"/>
                    <field name="direct_pi_count"/>
                    <field name="direct_pi_avg"/>
                    <field name="pi_high_count"/>
                    <field name="pi_medium_count"/>
                    <field name="pi_low_count"/>
                    <field name="pi_none_count"/>
                    <field name="active"/>
                    <field name="email"/>
                    <field name="phone"/>
                    <templates>
                        <t t-name="card">
                            <div class="oe_kanban_card oe_kanban_global_click compact">
                                <div class="o_dropdown_kanban dropdown">
                                    <a class="dropdown-toggle o-no-caret btn" data-bs-toggle="dropdown" href="#" role="button" aria-label="Dropdown menu" title="Dropdown menu">
                                        <span class="fa fa-ellipsis-v"/>
                                    </a>
                                    <div class="dropdown-menu" role="menu">
                                        <a t-if="widget.editable" type="edit" class="dropdown-item">Edit</a>
                                        <a t-if="widget.deletable" type="delete" class="dropdown-item">Delete</a>
                                        <div class="dropdown-divider"/>
                                        <div class="dropdown-item-text text-muted">
                                            <small><field name="code"/></small>
                                        </div>
                                    </div>
                                </div>

                                <div class="oe_kanban_content">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title">
                                                <field name="name"/>
                                            </strong>
                                            <small class="o_kanban_record_subtitle text-muted">
                                                <field name="code"/>
                                            </small>
                                        </div>
                                        <div class="o_kanban_manage_button_section d-flex align-items-center gap-2">
                                            <span class="badge rounded-pill text-bg-primary" title="Devolved programmes">
                                                <field name="programme_count"/> Devolved
                                            </span>
                                            <span class="badge rounded-pill text-bg-info" title="Division-owned KPIs">
                                                <field name="division_kpi_count"/> KPIs
                                            </span>
                                        </div>
                                    </div>

                                    <div class="row mt-2 g-1">
                                        <div class="col-7 text-truncate" title="Head of Division">
                                            <span class="fa fa-user" title="Head"/>
                                            <field name="head_id"/>
                                        </div>
                                        <div class="col-5 text-end text-truncate" title="Parent Directorate">
                                            <span class="fa fa-building"/>
                                            <field name="directorate_id"/>
                                        </div>
                                    </div>

                                    <div class="mt-2">
                                        <div class="text-muted small d-flex justify-content-between align-items-center">
                                            <span>Overall Performance</span>
                                            <span><t t-out="record.overall_performance.raw_value"/>%</span>
                                        </div>
                                        <field name="overall_performance" widget="progressbar"/>
                                    </div>

                                    <div class="mt-2">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <span class="badge text-bg-light" title="Programme KPI Avg">
                                                <span class="fa fa-line-chart"/> <t t-out="record.programme_pi_avg.raw_value"/>% / <t t-out="record.programme_pi_count.raw_value"/> KPIs
                                            </span>
                                            <span class="badge text-bg-light" title="Direct KPI Avg">
                                                <span class="fa fa-bullseye"/> <t t-out="record.direct_pi_avg.raw_value"/>% / <t t-out="record.direct_pi_count.raw_value"/> KPIs
                                            </span>
                                        </div>
                                        <div class="mt-2">
                                            <div class="text-muted small">KPI Status Mix</div>
                                            <div class="d-flex gap-1 align-items-center" title="High / Medium / Low / None">
                                                <div class="progress flex-grow-1" style="height:8px;">
                                                    <t t-set="total" t-value="(record.pi_high_count.raw_value || 0) + (record.pi_medium_count.raw_value || 0) + (record.pi_low_count.raw_value || 0) + (record.pi_none_count.raw_value || 0)"/>
                                                    <div class="progress-bar bg-success" role="progressbar" t-att-style="'width: ' + (total ? Math.round((record.pi_high_count.raw_value/total)*100) : 0) + '%'"/>
                                                    <div class="progress-bar bg-warning" role="progressbar" t-att-style="'width: ' + (total ? Math.round((record.pi_medium_count.raw_value/total)*100) : 0) + '%'"/>
                                                    <div class="progress-bar bg-danger" role="progressbar" t-att-style="'width: ' + (total ? Math.round((record.pi_low_count.raw_value/total)*100) : 0) + '%'"/>
                                                    <div class="progress-bar bg-secondary" role="progressbar" t-att-style="'width: ' + (total ? Math.round((record.pi_none_count.raw_value/total)*100) : 0) + '%'"/>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="mt-2" t-if="record.email.raw_value or record.phone.raw_value">
                                        <div t-if="record.email.raw_value" class="text-muted small">
                                            <span class="fa fa-envelope" title="Email"/> <field name="email"/>
                                        </div>
                                        <div t-if="record.phone.raw_value" class="text-muted small">
                                            <span class="fa fa-phone" title="Phone"/> <field name="phone"/>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_bottom d-flex justify-content-end gap-2 mt-2">
                                        <button type="object" name="action_view_programmes" class="btn btn-xs btn-secondary">
                                            <span class="fa fa-tasks"/> Devolved
                                        </button>
                                        <button type="object" name="action_view_implementing_programmes" class="btn btn-xs btn-primary">
                                            <span class="fa fa-briefcase"/> Implementing
                                        </button>
                                        <button type="object" name="action_view_division_performance" class="btn btn-xs btn-info">
                                            <span class="fa fa-line-chart"/> Analytics
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                    <field name="programme_count" string="Devolved Programmes"/>
                </kanban>
            </field>
        </record>

        <!-- Enhanced Division List View -->
        <record id="view_kcca_division_list" model="ir.ui.view">
            <field name="name">kcca.division.list</field>
            <field name="model">kcca.division</field>
            <field name="arch" type="xml">
                <list string="KCCA Divisions" decoration-muted="not active">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="directorate_id"/>
                    <field name="head_id"/>
                    <field name="programme_count" string="Devolved Programmes"/>
                    <field name="overall_performance" widget="progressbar"/>
                    <field name="email"/>
                    <field name="phone"/>
                    <field name="active" invisible="1"/>
                </list>
            </field>
    </record>
            

    <!-- Enhanced Division Form View -->
        <record id="view_kcca_division_form" model="ir.ui.view">
            <field name="name">kcca.division.form</field>
            <field name="model">kcca.division</field>
            <field name="arch" type="xml">
        <form string="KCCA Division" class="o_form_view_compact_chatter kcca_division_form">
                    <header>
                        <field name="active" widget="boolean_toggle"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_programmes" type="object"
                                    class="oe_stat_button" icon="fa-tasks">
                                <field name="programme_count" widget="statinfo" string="Devolved Programmes"/>
                            </button>
                <button name="action_view_implementing_programmes" type="object"
                    class="oe_stat_button" icon="fa-briefcase" modifiers="{'invisible': [('implementing_programme_count', '=', 0)]}">
                                <field name="implementing_programme_count" widget="statinfo" string="Implementing"/>
                            </button>
                            <button name="action_view_division_performance" type="object"
                                    class="oe_stat_button" icon="fa-line-chart">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="overall_performance" widget="float" digits="[16, 2]"/>
                                    </span>
                                    <span class="o_stat_text">Performance (%)</span>
                                </div>
                            </button>
                        </div>

                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Division Name"/>
                            </h1>
                            <div class="o_row">
                                <field name="code" placeholder="Division Code"/>
                            </div>
                        </div>

                        <group>
                            <group name="basic_info" string="Basic Information">
                                <field name="directorate_id"/>
                                <field name="sequence"/>
                                <field name="active"/>
                            </group>

                            <group name="contact_info" string="Contact Information">
                                <field name="email"/>
                                <field name="phone"/>
                                <field name="office_location"/>
                            </group>
                        </group>

                        <group>
                            <group name="leadership" string="Leadership">
                                <field name="head_id"/>
                                <field name="deputy_head_id"/>
                            </group>

                            <group name="performance" string="Performance Overview">
                                <field name="programme_count" readonly="1"/>
                                <field name="performance_indicator_count" readonly="1"/>
                                <field name="overall_performance" widget="float" digits="[16, 2]" readonly="1" string="Overall Performance (%)"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Description">
                                <field name="description" widget="html"/>
                            </page>

                            <page string="Devolved Programmes">
                                <field name="programme_ids">
                                    <list editable="bottom">
                                        <field name="name"/>
                                        <field name="code"/>
                                        <field name="programme_manager_id"/>
                                        <field name="overall_performance" widget="progressbar"/>
                                    </list>
                                </field>
                            </page>

                            
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <!-- Division Search View -->
        <record id="view_kcca_division_search" model="ir.ui.view">
            <field name="name">kcca.division.search</field>
            <field name="model">kcca.division</field>
            <field name="arch" type="xml">
                <search string="KCCA Divisions">
                    <field name="name" string="Division"/>
                    <field name="code" string="Code"/>
                    <field name="directorate_id" string="Directorate"/>
                    <field name="head_id" string="Head"/>
                </search>
            </field>
        </record>

        <!-- Division Action -->
        <record id="action_kcca_division" model="ir.actions.act_window">
            <field name="name">KCCA Divisions</field>
            <field name="res_model">kcca.division</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="search_view_id" ref="view_kcca_division_search"/>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first KCCA Division
                </p>
                <p>
                    KCCA divisions are territorial administrative units that implement
                    programmes within their geographical boundaries.
                </p>
            </field>
        </record>

    </data>
</odoo>
